@page "/Account/ForgotPassword"
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
@model cima.Blazor.Pages.Account.ForgotPasswordModel

@{
    Layout = null;
    var tokens = Antiforgery.GetAndStoreTokens(HttpContext);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recuperar contraseña - 4cima</title>
    <link rel="icon" type="image/svg+xml" href="/images/logo/4cima.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/app.min.css" />
</head>
<body class="auth-page">
    <div class="auth-container">
        <div class="auth-logo">
            <img src="/images/logo/4cima.svg" alt="4cima" onerror="this.src='/images/logo/4cima.png'" />
        </div>

        <div class="auth-card auth-card-centered">
            @if (Model.EmailSent)
            {
                <div class="auth-icon-circle auth-icon-success" aria-hidden="true">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>

                <h1 class="auth-title">Revisa tu correo</h1>
                <p class="auth-subtitle">
                    Si existe una cuenta asociada a ese correo, recibirás un enlace para restablecer tu contraseña.
                </p>
                <p class="auth-text-muted">
                    ¿No lo recibiste? <a href="/Account/ForgotPassword" class="auth-link-inline">Intenta de nuevo</a>.
                </p>
            }
            else
            {
                <div class="auth-icon-circle" aria-hidden="true">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                    </svg>
                </div>

                <h1 class="auth-title">Recuperar contraseña</h1>
                <p class="auth-subtitle">Ingresa tu correo y te enviaremos un enlace para restablecer tu contraseña.</p>

                <form method="post" novalidate>
                    <input name="__RequestVerificationToken" type="hidden" value="@tokens.RequestToken" />

                    <div class="auth-form-group">
                        <label class="auth-label" for="Email">Correo electrónico</label>
                        <input type="email"
                               id="Email"
                               name="Email"
                               class="auth-input"
                               placeholder="tu@email.com"
                               value="@Model.Email"
                               required
                               autofocus
                               autocomplete="email" />
                    </div>

                    <button type="submit" class="auth-submit">Enviar enlace</button>
                </form>
            }
        </div>

        <a href="/Account/Login" class="auth-back-link">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Volver a iniciar sesión
        </a>
    </div>
</body>
</html>
