@page "/Account/ForgotPassword"
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
@model cima.Blazor.Pages.Account.ForgotPasswordModel

@{
    Layout = null;
    var tokens = Antiforgery.GetAndStoreTokens(HttpContext);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Recuperar contraseña - 4cima</title>
    <link rel="icon" type="image/svg+xml" href="/images/logo/4cima.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/app.min.css" />
</head>
<body class="min-h-screen bg-neutral-50 flex items-center justify-center p-4 font-sans text-neutral-900 antialiased">
    <div class="w-full max-w-md">
        <!-- Logo Outside -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center mb-6 transition-transform hover:scale-105 duration-500">
                <img src="/images/logo/4cima - B&W.png" alt="4cima" class="h-24 w-auto" onerror="this.src='/images/logo/4cima.png'" />
            </div>
            <h1 class="text-2xl font-bold text-navy-950">Recuperación</h1>
        </div>

        <!-- Card -->
        <div class="bg-white rounded-2xl shadow-xl border border-neutral-100 p-8 md:p-10 text-center relative overflow-hidden">

            @if (Model.EmailSent)
            {
                <div class="w-16 h-16 bg-green-100 text-green-600 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>

                <h1 class="text-2xl font-bold text-navy-950 mb-3">Revisa tu correo</h1>
                <p class="text-neutral-500 mb-6 leading-relaxed">
                    Si existe una cuenta asociada a ese correo, recibirás un enlace para restablecer tu contraseña.
                </p>
                
                <p class="text-sm text-neutral-400">
                    ¿No lo recibiste? <a href="/Account/ForgotPassword" class="font-medium text-navy-600 hover:text-navy-800 transition-colors">Intenta de nuevo</a>.
                </p>
            }
            else
            {
                <h1 class="text-2xl font-bold text-navy-950 mb-2">Recuperar contraseña</h1>
                <p class="text-neutral-500 text-sm mb-8">Ingresa tu correo y te enviaremos un enlace para restablecer tu contraseña.</p>

                <form method="post" novalidate class="text-left space-y-6">
                    <input name="__RequestVerificationToken" type="hidden" value="@tokens.RequestToken" />

                    <div>
                        <label class="block text-sm font-medium text-navy-900 mb-2" for="Email">Correo electrónico</label>
                        <input type="email"
                               id="Email"
                               name="Email"
                               class="w-full px-4 py-3 bg-white border border-neutral-200 rounded-lg focus:ring-2 focus:ring-navy-600 focus:border-navy-600 outline-none transition-all placeholder:text-neutral-400"
                               placeholder="tu@email.com"
                               value="@Model.Email"
                               required
                               autofocus
                               autocomplete="email" />
                    </div>

                    <button type="submit" class="w-full bg-navy-900 hover:bg-navy-800 text-white font-semibold py-3.5 rounded-lg transition-all shadow-lg shadow-navy-900/20 active:scale-[0.99]">
                        Enviar enlace
                    </button>
                </form>
            }
        </div>

        <div class="mt-8 text-center">
            <a href="/Account/Login" class="inline-flex items-center gap-2 text-sm font-medium text-neutral-500 hover:text-navy-900 transition-colors">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Volver a iniciar sesión
            </a>
        </div>
    </div>
</body>
</html>
