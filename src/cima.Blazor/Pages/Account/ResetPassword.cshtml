@page "/Account/ResetPassword"
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
@model cima.Blazor.Pages.Account.ResetPasswordModel

@{
    Layout = null;
    var tokens = Antiforgery.GetAndStoreTokens(HttpContext);
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nueva contraseña - 4cima</title>
    <link rel="icon" type="image/svg+xml" href="/images/logo/4cima.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/app.min.css" />
</head>

<body class="min-h-screen bg-neutral-50 flex items-center justify-center p-4 font-sans text-neutral-900 antialiased">
    <div class="w-full max-w-md">
        <!-- Logo Outside -->
        <div class="text-center mb-8">
            <div class="inline-flex items-center justify-center mb-6 transition-transform hover:scale-105 duration-500">
                <img src="/images/logo/4cima - B&W.png" alt="4cima" class="h-24 w-auto" onerror="this.src='/images/logo/4cima.png'" />
            </div>
            <h1 class="text-2xl font-bold text-navy-950">Restablecer</h1>
        </div>

        <!-- Card -->
        <div class="bg-white rounded-2xl shadow-xl border border-neutral-100 p-8 md:p-10 relative overflow-hidden">
            <div class="text-center mb-8">
                
                @if (Model.PasswordChanged)
                {
                    <h1 class="text-2xl font-bold text-navy-950 mb-2">¡Contraseña actualizada!</h1>
                    <p class="text-neutral-500 text-sm">Tu contraseña se ha cambiado correctamente.</p>
                }
                else if (Model.InvalidToken)
                {
                    <h1 class="text-2xl font-bold text-red-600 mb-2">Enlace inválido</h1>
                    <p class="text-neutral-500 text-sm">Este enlace ha expirado o ya fue utilizado.</p>
                }
                else
                {
                    <h1 class="text-2xl font-bold text-navy-950 mb-2">Nueva contraseña</h1>
                    <p class="text-neutral-500 text-sm">Escribe tu nueva contraseña y confírmala.</p>
                }
            </div>

            @if (Model.PasswordChanged)
            {
                <a href="/Account/Login" class="block w-full bg-navy-900 hover:bg-navy-800 text-white font-semibold py-3.5 rounded-lg text-center transition-all shadow-lg shadow-navy-900/20 active:scale-[0.99]">
                    Iniciar sesión
                </a>
            }
            else if (Model.InvalidToken)
            {
                <a href="/Account/ForgotPassword" class="block w-full bg-navy-900 hover:bg-navy-800 text-white font-semibold py-3.5 rounded-lg text-center transition-all shadow-lg shadow-navy-900/20 active:scale-[0.99]">
                    Solicitar nuevo enlace
                </a>
            }
            else
            {
                <form method="post" novalidate class="space-y-6">
                    <input name="__RequestVerificationToken" type="hidden" value="@tokens.RequestToken" />
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                    <input type="hidden" name="ResetToken" value="@Model.ResetToken" />

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg flex items-start gap-3 text-sm" role="alert">
                            <svg class="w-5 h-5 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span>Verifica que la contraseña cumpla los requisitos y que ambas coincidan.</span>
                        </div>
                    }

                    <div class="bg-blue-50 border border-blue-100 rounded-lg p-4">
                        <h4 class="text-xs font-semibold text-blue-800 uppercase tracking-wider mb-2">Requisitos</h4>
                        <ul class="space-y-1 text-sm text-neutral-600">
                            <li id="req-length" class="flex items-center gap-2 transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                Mínimo 6 caracteres
                            </li>
                            <li id="req-upper" class="flex items-center gap-2 transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                Al menos una mayúscula
                            </li>
                            <li id="req-lower" class="flex items-center gap-2 transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                Al menos una minúscula
                            </li>
                            <li id="req-number" class="flex items-center gap-2 transition-colors">
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                                Al menos un número
                            </li>
                        </ul>
                        <style>
                            .valid { color: #16a34a; }
                            .valid svg { display: inline-block; }
                            li svg { display: none; }
                            li.valid svg { display: none; } /* Override default hidden */
                            .valid svg { display: inline; }
                        </style>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-navy-900 mb-2" for="Password">Nueva contraseña</label>
                        <div class="relative">
                            <input type="password"
                                   id="Password"
                                   name="Password"
                                   class="w-full px-4 py-3 bg-white border border-neutral-200 rounded-lg focus:ring-2 focus:ring-navy-600 focus:border-navy-600 outline-none transition-all placeholder:text-neutral-400 pr-10"
                                   placeholder="********"
                                   required
                                   autofocus
                                   autocomplete="new-password"
                                   oninput="validatePassword(this.value)" />
                            <button type="button" 
                                    class="absolute right-3 top-1/2 -translate-y-1/2 text-neutral-400 hover:text-navy-600 transition-colors p-1 rounded-md" 
                                    onclick="togglePassword('Password')" 
                                    aria-label="Mostrar u ocultar contraseña">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-navy-900 mb-2" for="ConfirmPassword">Confirmar contraseña</label>
                        <div class="relative">
                            <input type="password"
                                   id="ConfirmPassword"
                                   name="ConfirmPassword"
                                   class="w-full px-4 py-3 bg-white border border-neutral-200 rounded-lg focus:ring-2 focus:ring-navy-600 focus:border-navy-600 outline-none transition-all placeholder:text-neutral-400 pr-10"
                                   placeholder="********"
                                   required
                                   autocomplete="new-password" />
                            <button type="button" 
                                    class="absolute right-3 top-1/2 -translate-y-1/2 text-neutral-400 hover:text-navy-600 transition-colors p-1 rounded-md" 
                                    onclick="togglePassword('ConfirmPassword')" 
                                    aria-label="Mostrar u ocultar contraseña">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <button type="submit" class="w-full bg-navy-900 hover:bg-navy-800 text-white font-semibold py-3.5 rounded-lg transition-all shadow-lg shadow-navy-900/20 active:scale-[0.99]">
                        Cambiar contraseña
                    </button>
                </form>
            }
        </div>

        @if (!Model.PasswordChanged)
        {
            <div class="mt-8 text-center">
                <a href="/Account/Login" class="inline-flex items-center gap-2 text-sm font-medium text-neutral-500 hover:text-navy-900 transition-colors">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                    </svg>
                    Volver a iniciar sesión
                </a>
            </div>
        }
    </div>

    <script>
        function togglePassword(id) {
            const input = document.getElementById(id);
            if (!input) return;
            input.type = input.type === 'password' ? 'text' : 'password';
        }

        function validatePassword(pwd) {
            document.getElementById('req-length')?.classList.toggle('valid', pwd.length >= 6);
            document.getElementById('req-upper')?.classList.toggle('valid', /[A-Z]/.test(pwd));
            document.getElementById('req-lower')?.classList.toggle('valid', /[a-z]/.test(pwd));
            document.getElementById('req-number')?.classList.toggle('valid', /[0-9]/.test(pwd));
        }
    </script>
</body>
</html>
