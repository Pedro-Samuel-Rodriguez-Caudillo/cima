@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Antiforgery
@inject IAntiforgery Antiforgery
@model cima.Blazor.Pages.Account.LoginModel

@{
    Layout = null;
    var tokens = Antiforgery.GetAndStoreTokens(HttpContext);
    // Si no hay proveedores externos y EnableLocalLogin es false, 
    // significa que deber¡amos mostrar el formulario local de todos modos
    var showLocalLogin = Model.EnableLocalLogin || (Model.ExternalProviders?.Count() ?? 0) == 0;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Iniciar Sesión - 4cima</title>
    <link rel="icon" type="image/svg+xml" href="/images/logo/4cima.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/app.min.css" />
</head>
<body class="auth-page">
    <div class="auth-container">
        <div class="auth-logo">
            <img src="/images/logo/4cima.svg" alt="4cima" onerror="this.src='/images/logo/4cima.png'" />
        </div>

        <div class="auth-card">
            <div class="auth-card-centered">
                <h1 class="auth-title">Iniciar Sesión</h1>
                <p class="auth-subtitle">Ingresa tus credenciales</p>
            </div>

            @if (showLocalLogin)
            {
                <form method="post" id="loginForm">
                    <input name="__RequestVerificationToken" type="hidden" value="@tokens.RequestToken" />
                    <input type="hidden" name="action" value="Login" />
                    
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="auth-alert auth-alert-error">
                            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                            <span>Credenciales incorrectas</span>
                        </div>
                    }

                    <div class="auth-form-group">
                        <label class="auth-label" for="LoginInput_UserNameOrEmailAddress">Correo electrónico</label>
                        <input type="text" 
                               id="LoginInput_UserNameOrEmailAddress" 
                               name="LoginInput.UserNameOrEmailAddress"
                               class="auth-input" 
                               placeholder="tu@email.com"
                               value="@Model.LoginInput?.UserNameOrEmailAddress"
                               autocomplete="username"
                               required 
                               autofocus />
                    </div>

                    <div class="auth-form-group">
                        <label class="auth-label" for="LoginInput_Password">Contraseña</label>
                        <div class="auth-password-wrapper">
                            <input type="password" 
                                   id="LoginInput_Password" 
                                   name="LoginInput.Password"
                                   class="auth-input" 
                                   placeholder="********"
                                   autocomplete="current-password"
                                   required />
                            <button type="button" class="auth-password-toggle" onclick="togglePassword()" aria-label="Mostrar contraseña">
                                <svg id="eyeIcon" fill="none" stroke="currentColor" viewBox="0 0 24 24" width="20" height="20">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div class="auth-options">
                        <label class="auth-remember">
                            <input type="checkbox" 
                                   id="LoginInput_RememberMe" 
                                   name="LoginInput.RememberMe"
                                   value="true"
                                   class="auth-checkbox" />
                            <span>Recordarme</span>
                        </label>
                        <a href="/Account/ForgotPassword" class="auth-link">¿Olvidaste tu contraseña?</a>
                    </div>

                    <button type="submit" class="auth-submit" id="submitBtn">
                        Iniciar Sesión
                    </button>
                </form>
            }
            else
            {
                <div class="auth-alert auth-alert-error">
                    <span>Login no disponible - No hay métodos de autenticación configurados</span>
                </div>
            }
        </div>

        <a href="/" class="auth-back-link">
            <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Volver al sitio
        </a>
    </div>

    <script>
        function togglePassword() {
            const input = document.getElementById('LoginInput_Password');
            const icon = document.getElementById('eyeIcon');
            if (input.type === 'password') {
                input.type = 'text';
                icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>';
            } else {
                input.type = 'password';
                icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>';
            }
        }

        document.getElementById('loginForm')?.addEventListener('submit', function() {
            const btn = document.getElementById('submitBtn');
            btn.disabled = true;
            btn.innerHTML = '<span class="auth-loading"><svg class="auth-spinner" width="18" height="18" viewBox="0 0 24 24" fill="none"><circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" opacity="0.25"></circle><path d="M12 2a10 10 0 0110 10" stroke="currentColor" stroke-width="3" stroke-linecap="round"></path></svg>Verificando...</span>';
        });
    </script>
</body>
</html>
