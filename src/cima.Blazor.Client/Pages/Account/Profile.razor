@page "/account/profile"
@attribute [Authorize]
@using Volo.Abp.Users
@inject ICurrentUser CurrentUser
@inject NavigationManager Navigation
@inherits cimaComponentBase

<PageTitle>Mi Perfil - @L["CompanyName"]</PageTitle>

<div class="min-h-screen bg-neutral-50 pt-24 pb-12">
    <div class="cima-container max-w-4xl">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl md:text-4xl font-display font-bold text-neutral-900 mb-2">
                Mi Perfil
            </h1>
            <p class="text-neutral-600">
                Información de tu cuenta
            </p>
        </div>

        <!-- Profile Card -->
        <div class="cima-card p-6 md:p-8">
            <div class="flex items-start gap-6 mb-8">
                <!-- Avatar -->
                <div class="flex-shrink-0">
                    <div class="w-24 h-24 bg-navy-500 rounded-full flex items-center justify-center text-white text-3xl font-bold">
                        @GetInitials()
                    </div>
                </div>

                <!-- User Info -->
                <div class="flex-1">
                    <h2 class="text-2xl font-bold text-neutral-900 mb-1">
                        @CurrentUser.Name
                    </h2>
                    <p class="text-neutral-600 mb-2">
                        @CurrentUser.Email
                    </p>
                    <div class="flex flex-wrap gap-2">
                        @if (CurrentUser.IsInRole("admin"))
                        {
                            <span class="px-3 py-1 text-xs font-medium rounded-full bg-navy-500 text-white">
                                Administrador
                            </span>
                        }
                        else
                        {
                            <span class="px-3 py-1 text-xs font-medium rounded-full bg-neutral-500 text-white">
                                Usuario
                            </span>
                        }
                    </div>
                </div>
            </div>

            <!-- Details -->
            <div class="border-t border-neutral-200 pt-6">
                <h3 class="text-lg font-semibold text-neutral-900 mb-4">
                    Detalles de la Cuenta
                </h3>
                
                <div class="space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-neutral-700 mb-1">
                                Nombre de Usuario
                            </label>
                            <p class="text-neutral-900">
                                @CurrentUser.UserName
                            </p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-neutral-700 mb-1">
                                Email
                            </label>
                            <p class="text-neutral-900">
                                @CurrentUser.Email
                            </p>
                        </div>

                        <div>
                            <label class="block text-sm font-medium text-neutral-700 mb-1">
                                ID de Usuario
                            </label>
                            <p class="text-neutral-900 font-mono text-sm">
                                @CurrentUser.Id
                            </p>
                        </div>

                        @if (CurrentUser.TenantId.HasValue)
                        {
                            <div>
                                <label class="block text-sm font-medium text-neutral-700 mb-1">
                                    Tenant ID
                                </label>
                                <p class="text-neutral-900 font-mono text-sm">
                                    @CurrentUser.TenantId
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Actions -->
            <div class="border-t border-neutral-200 pt-6 mt-6 flex gap-3">
                <a href="/account/settings" class="cima-btn cima-btn-primary">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 mr-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M10.343 3.94c.09-.542.56-.94 1.11-.94h1.093c.55 0 1.02.398 1.11.94l.149.894c.07.424.384.764.78.93.398.164.855.142 1.205-.108l.737-.527a1.125 1.125 0 011.45.12l.773.774c.39.389.44 1.002.12 1.45l-.527.737c-.25.35-.272.806-.107 1.204.165.397.505.71.93.78l.893.15c.543.09.94.56.94 1.109v1.094c0 .55-.397 1.02-.94 1.11l-.893.149c-.425.07-.765.383-.93.78-.165.398-.143.854.107 1.204l.527.738c.32.447.269 1.06-.12 1.45l-.774.773a1.125 1.125 0 01-1.449.12l-.738-.527c-.35-.25-.806-.272-1.203-.107-.397.165-.71.505-.781.929l-.149.894c-.09.542-.56.94-1.11.94h-1.094c-.55 0-1.019-.398-1.11-.94l-.148-.894c-.071-.424-.384-.764-.781-.93-.398-.164-.854-.142-1.204.108l-.738.527c-.447.32-1.06.269-1.45-.12l-.773-.774a1.125 1.125 0 01-.12-1.45l.527-.737c.25-.35.273-.806.108-1.204-.165-.397-.505-.71-.93-.78l-.894-.15c-.542-.09-.94-.56-.94-1.109v-1.094c0-.55.398-1.02.94-1.11l.894-.149c.424-.07.765-.383.93-.78.165-.398.143-.854-.107-1.204l-.527-.738a1.125 1.125 0 01.12-1.45l.773-.773a1.125 1.125 0 011.45-.12l.737.527c.35.25.807.272 1.204.107.397-.165.71-.505.78-.929l.15-.894z" />
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    Configuración
                </a>
                
                <a href="/" class="cima-btn cima-btn-secondary">
                    Volver al Inicio
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    private string GetInitials()
    {
        var name = CurrentUser.Name ?? CurrentUser.UserName ?? "U";
        var parts = name.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        
        if (parts.Length >= 2)
        {
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        }
        
        return name.Length > 0 ? name.Substring(0, Math.Min(2, name.Length)).ToUpper() : "U";
    }
}
