@page "/404"
@using cima.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<cimaResource> L

<PageTitle>@L["NotFound:Title"] - @L["CompanyName"]</PageTitle>

<div class="min-h-[60vh] flex flex-col items-center justify-center text-center px-4">
    <div class="mb-8 p-6 bg-neutral-50 rounded-full">
        <MudIcon Icon="@Icons.Material.Filled.SearchOff" Size="Size.Large" Class="text-neutral-400 text-6xl" />
    </div>
    
    <h1 class="text-6xl font-display font-bold text-navy-900 mb-4">404</h1>
    <h2 class="text-2xl font-semibold text-neutral-800 mb-4">@L["NotFound:Title"]</h2>
    <p class="text-lg text-neutral-600 mb-8 max-w-md">@L["NotFound:Message"]</p>
    
    <div class="flex gap-4">
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Href="javascript:history.back()">
            @L["Common:Back"]
        </MudButton>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/">
            @L["NotFound:BackHome"]
        </MudButton>
    </div>
</div>
