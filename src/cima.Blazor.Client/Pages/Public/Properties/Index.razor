@page "/properties"
@page "/propiedades"
@using cima.Listings
@inject IListingAppService ListingService
@inject NavigationManager NavManager
@inherits cimaComponentBase

<PageTitle>@L["Properties:Title"] - @L["CompanyName"]</PageTitle>

<div class="min-h-screen bg-neutral-50">
    @* Header Section - Clean Design (diseñado para ir detrás del navbar transparente) *@
    <section class="bg-gradient-to-br from-navy-900 via-navy-800 to-navy-700 text-white pt-24 md:pt-28">
        <div class="cima-container py-14 md:py-18">
            <div class="max-w-4xl space-y-4">
                <span class="inline-block px-4 py-1 bg-white/10 border border-white/10 text-white text-sm font-medium rounded-full backdrop-blur-md">
                    @L["Properties:Title"]
                </span>
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold tracking-tight text-white drop-shadow-lg">
                    @L["Properties:Title"]
                </h1>
                <p class="text-lg md:text-xl text-white/85 leading-relaxed max-w-2xl">
                    @L["Properties:Subtitle"]
                </p>
            </div>
        </div>
    </section>

    @* Filters Section *@
    <section class="relative -mt-6 z-10 pb-6">
        <div class="cima-container">
            <div class="bg-white rounded-xl shadow-sm p-5 md:p-6 border border-neutral-200">
                <PropertySearchFilters 
                    OnSearch="HandleSearch"
                    OnClear="HandleClearFilters" />
            </div>
        </div>
    </section>

    @* Results Section *@
    <section class="py-12 md:py-16">
        <div class="cima-container">
            @if (IsLoading)
            {
                <div class="mb-8">
                    <div class="cima-skeleton-text w-48 h-6 mb-4"></div>
                </div>
                
                @* Grid responsive con skeletons *@
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    @for (int i = 0; i < 8; i++)
                    {
                        <div class="bg-white rounded-2xl shadow-md overflow-hidden">
                            <div class="aspect-[4/3] bg-neutral-200 animate-pulse"></div>
                            <div class="p-5 space-y-4">
                                <div class="cima-skeleton-text w-3/4 h-5"></div>
                                <div class="cima-skeleton-text w-1/2 h-4"></div>
                                <div class="flex gap-3">
                                    <div class="cima-skeleton-text w-16 h-4"></div>
                                    <div class="cima-skeleton-text w-16 h-4"></div>
                                    <div class="cima-skeleton-text w-16 h-4"></div>
                                </div>
                                <div class="cima-skeleton-text w-1/3 h-6"></div>
                            </div>
                        </div>
                    }
                </div>
            }
            else if (Listings?.Any() == true)
            {
                @* Results header *@
                <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8 gap-4">
                    <div>
                        <p class="text-neutral-600 text-lg">
                            @L["Search:ResultsFound", TotalCount]
                        </p>
                    </div>
                    
                    <div class="flex items-center gap-3">
                        <span class="text-sm text-neutral-500 hidden md:inline">@L["Properties:SortBy"]</span>
                        <select 
                            class="cima-input w-auto min-w-[200px] bg-white"
                            value="@SortOption"
                            @onchange="HandleSortChangeAsync">
                            <option value="CreatedAt DESC">@L["Properties:Newest"]</option>
                            <option value="Price ASC">@L["Properties:PriceLowToHigh"]</option>
                            <option value="Price DESC">@L["Properties:PriceHighToLow"]</option>
                            <option value="Area DESC">@L["Properties:AreaLargeToSmall"]</option>
                        </select>
                    </div>
                </div>

                @* Grid responsive: 1 col móvil, 2 cols tablet, 3 cols desktop, 4 cols wide *@
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 xl:gap-8">
                    @foreach (var listing in Listings)
                    {
                        <ListingCard Listing="listing" />
                    }
                </div>

                @* Paginación Premium *@
                @if (TotalPages > 1)
                {
                    <div class="mt-16 flex justify-center">
                        <nav class="inline-flex items-center gap-1 bg-white rounded-xl shadow-md p-2">
                            <button 
                                @onclick="PreviousPage"
                                disabled="@(CurrentPage == 1)"
                                class="flex items-center justify-center w-10 h-10 rounded-lg text-neutral-600 hover:bg-neutral-100 disabled:opacity-40 disabled:cursor-not-allowed transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                                </svg>
                            </button>

                            <div class="flex items-center gap-1 px-2">
                                @{
                                    var maxVisiblePages = Math.Min(TotalPages, 5);
                                    var startPage = Math.Max(1, CurrentPage - 2);
                                    var endPage = Math.Min(TotalPages, startPage + maxVisiblePages - 1);
                                    
                                    if (startPage > 1)
                                    {
                                        <button @onclick="@(() => GoToPage(1))" class="@GetPageButtonClass(1)">1</button>
                                        if (startPage > 2)
                                        {
                                            <span class="px-2 text-neutral-400">...</span>
                                        }
                                    }
                                    
                                    for (int i = startPage; i <= endPage; i++)
                                    {
                                        var pageNum = i;
                                        <button 
                                            @onclick="@(() => GoToPage(pageNum))"
                                            class="@GetPageButtonClass(pageNum)">
                                            @pageNum
                                        </button>
                                    }
                                    
                                    if (endPage < TotalPages)
                                    {
                                        if (endPage < TotalPages - 1)
                                        {
                                            <span class="px-2 text-neutral-400">...</span>
                                        }
                                        <button @onclick="@(() => GoToPage(TotalPages))" class="@GetPageButtonClass(TotalPages)">@TotalPages</button>
                                    }
                                }
                            </div>

                            <button 
                                @onclick="NextPage"
                                disabled="@(CurrentPage == TotalPages)"
                                class="flex items-center justify-center w-10 h-10 rounded-lg text-neutral-600 hover:bg-neutral-100 disabled:opacity-40 disabled:cursor-not-allowed transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </button>
                        </nav>
                    </div>
                }
            }
            else
            {
                @* Empty state premium *@
                <div class="text-center py-20">
                    <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-neutral-100 mb-8">
                        <svg class="w-12 h-12 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                    <h3 class="text-2xl font-display font-bold text-neutral-900 mb-3">
                        @L["Search:NoResults"]
                    </h3>
                    <p class="text-neutral-600 mb-8 max-w-md mx-auto">
                        @L["Search:NoResults"]
                    </p>
                    <button 
                        @onclick="HandleClearFilters"
                        class="cima-btn cima-btn-primary">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                        Limpiar filtros
                    </button>
                </div>
            }
        </div>
    </section>
</div>

@code {
    private bool IsLoading { get; set; } = true;
    private List<ListingDto>? Listings { get; set; }
    private int TotalCount { get; set; }
    private int CurrentPage { get; set; } = 1;
    private const int PageSize = 12;
    private int TotalPages => (int)Math.Ceiling((double)TotalCount / PageSize);
    
    private PropertySearchDto SearchFilters { get; set; } = new();
    private string SortOption { get; set; } = "CreatedAt DESC";

    protected override async Task OnInitializedAsync()
    {
        try
        {
        // Leer parámetros de query string
            var uri = NavManager.ToAbsoluteUri(NavManager.Uri);
            var queryParams = System.Web.HttpUtility.ParseQueryString(uri.Query);
            
            if (queryParams["search"] != null)
            {
                SearchFilters.Location = queryParams["search"];
            }

            await LoadListings();
        }
        catch (OperationCanceledException)
        {
            // Ignorar - ocurre durante navegación/cambio de idioma
        }
    }

    private async Task LoadListings()
    {
        try
        {
            IsLoading = true;
            StateHasChanged();

            var input = new GetListingsInput
            {
                SkipCount = (CurrentPage - 1) * PageSize,
                MaxResultCount = PageSize,
                Sorting = SortOption,
                MinPrice = SearchFilters.MinPrice,
                MaxPrice = SearchFilters.MaxPrice,
                MinBedrooms = SearchFilters.MinBedrooms,
                MinBathrooms = SearchFilters.MinBathrooms,
                PropertyType = SearchFilters.Type.HasValue ? (int)SearchFilters.Type.Value : null,
                PropertyCategory = SearchFilters.Category.HasValue ? (int)SearchFilters.Category.Value : null,
                TransactionType = SearchFilters.TransactionType.HasValue ? (int)SearchFilters.TransactionType.Value : null
            };

            var result = await ListingService.GetPublishedAsync(input);
            
            Listings = result.Items.ToList();
            TotalCount = (int)result.TotalCount;
        }
        catch (OperationCanceledException)
        {
            // Ignorar - ocurre durante navegación/cambio de idioma
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
        finally
        {
            IsLoading = false;
            StateHasChanged();
        }
    }

    private async Task HandleSearch(PropertySearchDto filters)
    {
        SearchFilters = filters;
        CurrentPage = 1;
        await LoadListings();
    }

    private async Task HandleClearFilters()
    {
        SearchFilters = new();
        CurrentPage = 1;
        await LoadListings();
    }

    private async Task HandleSortChangeAsync(ChangeEventArgs e)
    {
        SortOption = e.Value?.ToString() ?? "CreatedAt DESC";
        CurrentPage = 1;
        await LoadListings();
    }

    private async Task GoToPage(int page)
    {
        CurrentPage = page;
        await LoadListings();
    }

    private async Task PreviousPage()
    {
        if (CurrentPage > 1)
        {
            await GoToPage(CurrentPage - 1);
        }
    }

    private async Task NextPage()
    {
        if (CurrentPage < TotalPages)
        {
            await GoToPage(CurrentPage + 1);
        }
    }

    private string GetPageButtonClass(int page)
    {
        var baseClass = "flex items-center justify-center w-10 h-10 text-sm font-medium rounded-lg transition-all duration-200";
        
        if (page == CurrentPage)
        {
            return $"{baseClass} bg-navy-600 text-white shadow-md";
        }
        
        return $"{baseClass} text-neutral-600 hover:bg-neutral-100";
    }
}
