@page "/properties/{Id:guid}"
@page "/propiedades/{Id:guid}"
@using cima.Listings
@using cima.ContactRequests
@using cima.Blazor.Client.Services
@inject IListingAppService ListingService
@inject IContactRequestAppService ContactRequestService
@inject EnumLocalizationService EnumLocalizer
@inject NavigationManager NavManager
@inherits cimaComponentBase

<PageTitle>@(Listing?.Title ?? L["Properties:Title"]) - @L["CompanyName"]</PageTitle>

@if (IsLoading)
{
    <div class="min-h-screen bg-white">
        <div class="cima-container py-12">
            <div class="cima-skeleton-image mb-8"></div>
            <div class="space-y-4">
                <div class="cima-skeleton-text w-3/4"></div>
                <div class="cima-skeleton-text w-1/2"></div>
                <div class="cima-skeleton-text w-full"></div>
            </div>
        </div>
    </div>
}
else if (Listing == null)
{
    <div class="min-h-screen bg-white flex items-center justify-center">
        <div class="text-center">
            <svg class="w-20 h-20 mx-auto text-neutral-400 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            <h2 class="text-2xl font-semibold text-neutral-900 mb-2">
                @L["PropertyDetail:NotFound"]
            </h2>
            <a href="/properties" class="cima-btn cima-btn-primary mt-4">
                @L["PropertyDetail:BackToList"]
            </a>
        </div>
    </div>
}
else
{
    <div class="min-h-screen bg-white">
        @* Breadcrumbs *@
        <div class="bg-neutral-50 border-b border-neutral-200">
            <div class="cima-container py-4">
                <nav class="flex items-center text-sm text-neutral-600 gap-2" aria-label="Breadcrumb">
                    <a href="/" class="hover:text-navy-600 transition-colors">@L["Home"]</a>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    <a href="/properties" class="hover:text-navy-600 transition-colors">@L["Properties:Title"]</a>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                    <span class="text-neutral-900 font-medium">@Listing.Title</span>
                </nav>
            </div>
        </div>

        @* Galería de Imágenes *@
        @if (Listing.Images?.Any() == true)
        {
            <ImageGallery Images="@Listing.Images.Select(i => i.Url).ToList()" />
        }

        @* Contenido Principal *@
        <div class="cima-section">
            <div class="cima-container">
                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    @* Columna Principal (2/3) *@
                    <div class="lg:col-span-2 space-y-8">
                        @* Header *@
                        <div>
                            <div class="flex items-start justify-between mb-4">
                                <div class="flex-1">
                                    <h1 class="text-3xl md:text-4xl font-display font-bold text-neutral-900 mb-2">
                                        @Listing.Title
                                    </h1>
                                    <div class="flex items-center text-neutral-600 text-lg">
                                        <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                        </svg>
                                        @Listing.Location
                                    </div>
                                </div>

                                <div class="text-right">
                                    <div class="text-3xl md:text-4xl font-bold text-navy-600">
                                        @Listing.Price.ToString("C0", new System.Globalization.CultureInfo("es-MX"))
                                    </div>
                                    <div class="text-sm text-neutral-600">
                                        @EnumLocalizer.GetTransactionTypeName(Listing.TransactionType)
                                    </div>
                                </div>
                            </div>

                            @* Características principales *@
                            <div class="flex flex-wrap gap-6 p-6 bg-navy-50 rounded-lg">
                                <div class="flex items-center gap-3">
                                    <svg class="w-6 h-6 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                                    </svg>
                                    <div>
                                        <div class="text-sm text-neutral-600">@L["Properties:Bedrooms"]</div>
                                        <div class="text-xl font-semibold text-neutral-900">@Listing.Bedrooms</div>
                                    </div>
                                </div>

                                <div class="flex items-center gap-3">
                                    <svg class="w-6 h-6 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                              d="M19 14l-7 7m0 0l-7-7m7 7V3" />
                                    </svg>
                                    <div>
                                        <div class="text-sm text-neutral-600">@L["Properties:Bathrooms"]</div>
                                        <div class="text-xl font-semibold text-neutral-900">@Listing.Bathrooms</div>
                                    </div>
                                </div>

                                <div class="flex items-center gap-3">
                                    <svg class="w-6 h-6 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                              d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4" />
                                    </svg>
                                    <div>
                                        <div class="text-sm text-neutral-600">@L["Properties:Area"]</div>
                                        <div class="text-xl font-semibold text-neutral-900">@Listing.Area.ToString("N0") m²</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @* Descripción *@
                        <div>
                            <h2 class="text-2xl font-display font-semibold text-neutral-900 mb-4">
                                @L["PropertyDetail:Description"]
                            </h2>
                            <div class="prose prose-neutral max-w-none text-neutral-700 leading-relaxed whitespace-pre-line">
                                @Listing.Description
                            </div>
                        </div>

                        @* Detalles adicionales *@
                        <div>
                            <h2 class="text-2xl font-display font-semibold text-neutral-900 mb-4">
                                @L["PropertyDetail:Features"]
                            </h2>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div class="flex items-center gap-3 p-4 bg-neutral-50 rounded-lg">
                                    <svg class="w-5 h-5 text-navy-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    <div>
                                        <div class="font-medium text-neutral-900">@L["Search:PropertyCategory"]</div>
                                        <div class="text-sm text-neutral-600">@EnumLocalizer.GetPropertyCategoryName(Listing.Category)</div>
                                    </div>
                                </div>

                                <div class="flex items-center gap-3 p-4 bg-neutral-50 rounded-lg">
                                    <svg class="w-5 h-5 text-navy-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    <div>
                                        <div class="font-medium text-neutral-900">@L["Search:PropertyType"]</div>
                                        <div class="text-sm text-neutral-600">@EnumLocalizer.GetPropertyTypeName(Listing.Type)</div>
                                    </div>
                                </div>

                                <div class="flex items-center gap-3 p-4 bg-neutral-50 rounded-lg">
                                    <svg class="w-5 h-5 text-navy-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    <div>
                                        <div class="font-medium text-neutral-900">@L["Search:TransactionType"]</div>
                                        <div class="text-sm text-neutral-600">@EnumLocalizer.GetTransactionTypeName(Listing.TransactionType)</div>
                                    </div>
                                </div>

                                <div class="flex items-center gap-3 p-4 bg-neutral-50 rounded-lg">
                                    <svg class="w-5 h-5 text-navy-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                    </svg>
                                    <div>
                                        <div class="font-medium text-neutral-900">@L["Common:Status"]</div>
                                        <div class="text-sm text-neutral-600">@EnumLocalizer.GetListingStatusName(Listing.Status)</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    @* Sidebar (1/3) *@
                    <div class="lg:col-span-1">
                        <div class="sticky top-6">
                            <ContactForm ListingId="@Id" ListingTitle="@Listing.Title" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public Guid Id { get; set; }

    private bool IsLoading { get; set; } = true;
    private ListingDto? Listing { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadListing();
    }

    private async Task LoadListing()
    {
        try
        {
            IsLoading = true;
            Listing = await ListingService.GetAsync(Id);
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
            Listing = null;
        }
        finally
        {
            IsLoading = false;
        }
    }
}
