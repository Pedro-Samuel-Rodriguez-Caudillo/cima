@code {
    [Parameter]
    public Guid Id { get; set; }

    private bool IsLoading { get; set; } = true;
    private ListingDto? Listing { get; set; }
    private const string PlaceholderImage = "/images/placeholder.jpg";

    protected override async Task OnInitializedAsync()
    {
        await LoadListing();
    }

    private async Task LoadListing()
    {
        try
        {
            IsLoading = true;
            Listing = await ListingService.GetAsync(Id);
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
            Listing = null;
        }
        finally
        {
            IsLoading = false;
        }
    }

    private string GetPropertyFullUrl()
    {
        return $"{NavManager.BaseUri.TrimEnd('/')}/properties/{Id}";
    }

    private string GetSeoDescription()
    {
        if (Listing == null) return "";
        
        var location = Listing.Location?.ToString();
        var desc = string.IsNullOrWhiteSpace(location)
            ? $"{Listing.Title}. "
            : $"{Listing.Title} en {location}. ";
        if (Listing.Bedrooms > 0) desc += $"{Listing.Bedrooms} recámaras. ";
        if (Listing.Bathrooms > 0) desc += $"{Listing.Bathrooms} baños. ";
        desc += $"Precio: {Listing.Price:C0}";
        
        return desc.Length > 160 ? desc[..157] + "..." : desc;
    }

    private string GetSeoKeywords()
    {
        if (Listing == null) return "";
        
        var keywords = new List<string>
        {
            Listing.Location?.ToString() ?? "",
            EnumLocalizer.GetPropertyTypeName(Listing.Type),
            EnumLocalizer.GetPropertyCategoryName(Listing.Category),
            EnumLocalizer.GetTransactionTypeName(Listing.TransactionType),
            "propiedad",
            "inmueble",
            "4cima"
        };
        
        return string.Join(", ", keywords.Where(k => !string.IsNullOrEmpty(k)));
    }

    private string GetPropertyJsonLd()
    {
        if (Listing == null) return "";
        return SeoService.GeneratePropertyJsonLd(Listing, NavManager.BaseUri.TrimEnd('/'));
    }

    private List<string> GetGalleryImages()
    {
        var images = Listing?.Images?
            .Where(image => !string.IsNullOrWhiteSpace(image.Url))
            .Select(image => image.Url)
            .ToList() ?? new List<string>();

        if (images.Count == 0)
        {
            images.Add(PlaceholderImage);
        }

        return images;
    }
}
