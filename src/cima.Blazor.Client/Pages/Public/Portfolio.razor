@page "/portfolio"
@using cima.Listings
@using cima.Listings.Outputs
@using cima.Architects
@using Microsoft.JSInterop
@inject IListingAppService ListingService
@inject IArchitectAppService ArchitectService
@inject IJSRuntime JS
@inherits cimaComponentBase

<PageTitle>@L["Portfolio:Title"] - @L["CompanyName"]</PageTitle>

<div class="min-h-screen bg-neutral-50">
    @* Header Section - Clean Design (dise�ado para ir detr�s del navbar transparente) *@
    <section class="bg-navy-900 pt-20 md:pt-24">
        <div class="cima-container py-10 md:py-14">
            <div class="max-w-4xl">
                <span class="inline-block px-4 py-1.5 bg-navy-700 text-navy-100 text-sm font-medium rounded-full mb-6">
                    Proyectos Completados
                </span>
                <h1 class="text-5xl md:text-6xl lg:text-7xl font-display font-bold mb-8 tracking-tight text-white">
                    @L["Portfolio:Title"]
                </h1>
                <p class="text-xl md:text-2xl text-navy-200 leading-relaxed max-w-2xl">
                    @L["Portfolio:Subtitle"]
                </p>
            </div>
        </div>
    </section>

    @* Filters Section - Only show if architects have usernames configured *@
    @if (ArchitectsWithUsernames?.Any() == true)
    {
        <section class="relative -mt-4 z-10 pb-8">
            <div class="cima-container">
                <div class="bg-white rounded-2xl shadow-xl p-6 md:p-8 border border-neutral-100">
                    <div class="flex flex-col md:flex-row gap-4 items-start md:items-center">
                        <label for="architect-filter" class="font-medium text-neutral-900 whitespace-nowrap">
                            @L["Portfolio:FilterByArchitect"]:
                        </label>
                        
                        <select 
                            id="architect-filter"
                            class="cima-input flex-1 md:max-w-md bg-white"
                            value="@SelectedArchitectId"
                            @onchange="OnArchitectFilterChanged">
                            <option value="">@L["Portfolio:AllArchitects"]</option>
                            @foreach (var architect in ArchitectsWithUsernames)
                            {
                                <option value="@architect.Id">@architect.UserName</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
        </section>
    }

    @* Projects Grid *@
    <section class="py-12 md:py-16">
        <div class="cima-container">
            @if (IsLoading)
            {
                <div class="mb-8">
                    <div class="cima-skeleton-text w-48 h-6 mb-4"></div>
                </div>
                
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 xl:gap-8">
                    @for (int i = 0; i < 8; i++)
                    {
                        <div class="bg-white rounded-2xl shadow-md overflow-hidden">
                            <div class="aspect-[4/3] bg-neutral-200 animate-pulse"></div>
                            <div class="p-5 space-y-4">
                                <div class="cima-skeleton-text w-3/4 h-5"></div>
                                <div class="cima-skeleton-text w-1/2 h-4"></div>
                                <div class="flex gap-3">
                                    <div class="cima-skeleton-text w-16 h-4"></div>
                                    <div class="cima-skeleton-text w-16 h-4"></div>
                                </div>
                                <div class="cima-skeleton-text w-1/3 h-6"></div>
                            </div>
                        </div>
                    }
                </div>
            }
            else if (PortfolioProjects?.Any() == true)
            {
                <div class="mb-8">
                    <p class="text-neutral-600 text-lg">
                        <span class="font-semibold text-navy-900">@TotalCount</span> @L["Portfolio:CompletedProjects"]
                    </p>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 xl:gap-8">
                    @foreach (var listing in PortfolioProjects)
                    {
                        <ListingCard Listing="listing" />
                    }
                </div>

                @* Paginaci�n Premium *@
                @if (TotalPages > 1)
                {
                    <div class="mt-16 flex justify-center">
                        <nav class="inline-flex items-center gap-1 bg-white rounded-xl shadow-md p-2">
                            <button 
                                @onclick="PreviousPage"
                                disabled="@(CurrentPage == 1)"
                                class="flex items-center justify-center w-10 h-10 rounded-lg text-neutral-600 hover:bg-neutral-100 disabled:opacity-40 disabled:cursor-not-allowed transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                                </svg>
                            </button>

                            <div class="flex items-center gap-1 px-2">
                                @{
                                    var maxVisiblePages = Math.Min(TotalPages, 5);
                                    var startPage = Math.Max(1, CurrentPage - 2);
                                    var endPage = Math.Min(TotalPages, startPage + maxVisiblePages - 1);
                                    
                                    if (startPage > 1)
                                    {
                                        <button @onclick="@(() => GoToPage(1))" class="@GetPageButtonClass(1)">1</button>
                                        if (startPage > 2)
                                        {
                                            <span class="px-2 text-neutral-400">...</span>
                                        }
                                    }
                                    
                                    for (int i = startPage; i <= endPage; i++)
                                    {
                                        var pageNum = i;
                                        <button 
                                            @onclick="@(() => GoToPage(pageNum))"
                                            class="@GetPageButtonClass(pageNum)">
                                            @pageNum
                                        </button>
                                    }
                                    
                                    if (endPage < TotalPages)
                                    {
                                        if (endPage < TotalPages - 1)
                                        {
                                            <span class="px-2 text-neutral-400">...</span>
                                        }
                                        <button @onclick="@(() => GoToPage(TotalPages))" class="@GetPageButtonClass(TotalPages)">@TotalPages</button>
                                    }
                                }
                            </div>

                            <button 
                                @onclick="NextPage"
                                disabled="@(CurrentPage == TotalPages)"
                                class="flex items-center justify-center w-10 h-10 rounded-lg text-neutral-600 hover:bg-neutral-100 disabled:opacity-40 disabled:cursor-not-allowed transition-colors">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </button>
                        </nav>
                    </div>
                }
            }
            else
            {
                @* Empty state premium *@
                <div class="text-center py-20">
                    <div class="inline-flex items-center justify-center w-24 h-24 rounded-full bg-neutral-100 mb-8">
                        <svg class="w-12 h-12 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" 
                                  d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                        </svg>
                    </div>
                    <h3 class="text-2xl font-display font-bold text-neutral-900 mb-3">
                        @L["Portfolio:NoProjects"]
                    </h3>
                    <p class="text-neutral-600 mb-8 max-w-md mx-auto">
                        @if (!string.IsNullOrEmpty(SelectedArchitectId))
                        {
                            <span>@L["Portfolio:NoProjectsByArchitect"]</span>
                        }
                        else
                        {
                            <span>@L["Portfolio:ComingSoon"]</span>
                        }
                    </p>
                </div>
            }
        </div>
    </section>
</div>

@code {
    private bool IsLoading { get; set; } = true;
    private List<ListingSummaryDto>? PortfolioProjects { get; set; }
    private List<ArchitectDto>? Architects { get; set; }
    private int TotalCount { get; set; }
    private int CurrentPage { get; set; } = 1;
    private const int PageSize = 12;
    private int TotalPages => (int)Math.Ceiling((double)TotalCount / PageSize);
    
    private string? SelectedArchitectId { get; set; }

    // Filter to only show architects with configured usernames
    private List<ArchitectDto>? ArchitectsWithUsernames => Architects?
        .Where(a => !string.IsNullOrWhiteSpace(a.UserName) && a.IsActive)
        .ToList();

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        try
        {
            await Task.WhenAll(
                LoadArchitects(),
                LoadPortfolio()
            );
        }
        catch (OperationCanceledException)
        {
            // Ignorar - ocurre durante navegaci�n/cambio de idioma
        }
    }

    private async Task LoadArchitects()
    {
        try
        {
            var result = await ArchitectService.GetListAsync(new Volo.Abp.Application.Dtos.PagedAndSortedResultRequestDto
            {
                MaxResultCount = 100
            });
            
            Architects = result.Items.ToList();
        }
        catch (OperationCanceledException)
        {
            // Ignorar - ocurre durante navegaci�n/cambio de idioma
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
    }

    private async Task LoadPortfolio()
    {
        try
        {
            IsLoading = true;

            var input = new GetListingsInput
            {
                SkipCount = (CurrentPage - 1) * PageSize,
                MaxResultCount = PageSize,
                Sorting = "CreatedAt DESC"
            };

            // Filtrar por arquitecto si est� seleccionado
            if (!string.IsNullOrEmpty(SelectedArchitectId) && Guid.TryParse(SelectedArchitectId, out var architectId))
            {
                input.ArchitectId = architectId;
            }

            // Use GetPortfolioAsync which is AllowAnonymous (public access)
            var result = await ListingService.GetPortfolioAsync(input);
            
            PortfolioProjects = result.Items.ToList();
            TotalCount = (int)result.TotalCount;
        }
        catch (OperationCanceledException)
        {
            // Ignorar - ocurre durante navegaci�n/cambio de idioma
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task OnArchitectFilterChanged(ChangeEventArgs e)
    {
        SelectedArchitectId = e.Value?.ToString();
        CurrentPage = 1;
        await LoadPortfolio();
    }

    private async Task GoToPage(int page)
    {
        CurrentPage = page;
        await LoadPortfolio();
        
        try
        {
            // Scroll to top
            await JS.InvokeVoidAsync("window.scrollTo", new { top = 0, behavior = "smooth" });
        }
        catch (JSDisconnectedException)
        {
            // Ignorar - circuito desconectado
        }
        catch (OperationCanceledException)
        {
            // Ignorar - navegaci�n en progreso
        }
    }

    private async Task PreviousPage()
    {
        if (CurrentPage > 1)
        {
            await GoToPage(CurrentPage - 1);
        }
    }

    private async Task NextPage()
    {
        if (CurrentPage < TotalPages)
        {
            await GoToPage(CurrentPage + 1);
        }
    }

    private string GetPageButtonClass(int page)
    {
        var baseClass = "flex items-center justify-center w-10 h-10 text-sm font-medium rounded-lg transition-all duration-200";
        
        if (page == CurrentPage)
        {
            return $"{baseClass} bg-navy-600 text-white shadow-md";
        }
        
        return $"{baseClass} text-neutral-600 hover:bg-neutral-100";
    }
}
