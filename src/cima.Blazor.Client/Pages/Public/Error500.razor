@page "/500"
@using cima.Localization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<cimaResource> L

<PageTitle>@L["Error:Title"] - @L["CompanyName"]</PageTitle>

<PageShell Variant="PageShellVariant.Centered" Class="flex-col text-center px-4">
    <div class="mb-8 p-6 bg-red-50 rounded-full">
        <MudIcon Icon="@Icons.Material.Filled.ErrorOutline" Size="Size.Large" Class="text-red-400 text-6xl" />
    </div>
    
    <h1 class="text-6xl font-display font-bold text-navy-900 mb-4">500</h1>
    <h2 class="text-2xl font-semibold text-neutral-800 mb-4">@L["Error:GenericTitle"]</h2>
    <p class="text-lg text-neutral-600 mb-8 max-w-md">@L["Error:GenericMessage"]</p>
    
    <div class="flex gap-4">
        <MudButton Variant="Variant.Filled" Color="Color.Primary" Href="/">
            @L["NotFound:BackHome"]
        </MudButton>
    </div>
</PageShell>
