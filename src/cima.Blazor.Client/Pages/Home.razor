@page "/"
@using cima.Domain.Shared.Dtos
@using cima.Listings
@inject IListingAppService ListingAppService
@inject NavigationManager Navigation

<PageTitle>CIMA - Plataforma Inmobiliaria</PageTitle>

<!-- Hero Section -->
<section class="relative min-h-[80vh] flex items-center bg-white dark:bg-gray-900 transition-colors duration-300">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-12 gap-6">
            <div class="col-span-12 lg:col-span-8">
                <div class="max-w-4xl">
                    <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight text-gray-900 dark:text-white mb-8 fade-in leading-none">
                        Arquitectura.<br/>
                        Minimalismo.<br/>
                        Excelencia.
                    </h1>
                    <p class="text-base md:text-lg leading-relaxed text-gray-600 dark:text-gray-400 tracking-wide mb-12 max-w-2xl fade-in" style="animation-delay: 0.2s">
                        Conectamos arquitectos profesionales con clientes que valoran el diseño excepcional. 
                        Propiedades únicas para personas exigentes.
                    </p>
                    <div class="flex flex-col sm:flex-row gap-4 fade-in" style="animation-delay: 0.4s">
                        <button @onclick="@(() => Navigation.NavigateTo("/properties"))" 
                                class="px-6 py-3 text-sm font-medium uppercase tracking-wider bg-[#162133] text-white hover:bg-opacity-90 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#162133] border border-[#162133] transition-all duration-200">
                            Explorar Propiedades
                        </button>
                        <button @onclick="@(() => Navigation.NavigateTo("/about"))" 
                                class="px-6 py-3 text-sm font-medium uppercase tracking-wider bg-transparent text-[#162133] dark:text-white border-2 border-[#162133] dark:border-white hover:bg-[#162133] hover:text-white dark:hover:bg-white dark:hover:text-[#162133] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#162133] transition-all duration-200">
                            Conocer Más
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-span-12 lg:col-span-4 hidden lg:flex items-center justify-end">
                <div class="w-full h-96 bg-[#162133] dark:bg-gray-800"></div>
            </div>
        </div>
    </div>
</section>

<!-- Stats Section -->
<section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-800 transition-colors duration-300">
    <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div class="text-center border-l-2 border-[#162133] pl-8">
                <div class="text-6xl font-bold text-[#162133] dark:text-white mb-2">@totalListings</div>
                <div class="text-sm uppercase tracking-wider text-gray-600 dark:text-gray-400">Propiedades Activas</div>
            </div>
            <div class="text-center border-l-2 border-[#162133] pl-8">
                <div class="text-6xl font-bold text-[#162133] dark:text-white mb-2">@totalArchitects</div>
                <div class="text-sm uppercase tracking-wider text-gray-600 dark:text-gray-400">Arquitectos</div>
            </div>
            <div class="text-center border-l-2 border-[#162133] pl-8">
                <div class="text-6xl font-bold text-[#162133] dark:text-white mb-2">@totalContacts</div>
                <div class="text-sm uppercase tracking-wider text-gray-600 dark:text-gray-400">Consultas</div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Properties -->
<section class="py-16 md:py-24 bg-white dark:bg-gray-900 transition-colors duration-300">
    <div class="container mx-auto px-4">
        <div class="mb-16">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight text-gray-900 dark:text-white mb-4">Propiedades Destacadas</h2>
            <div class="w-24 h-1 bg-[#162133] dark:bg-white"></div>
        </div>
        
        @if (isLoading)
        {
            <div class="flex justify-center py-20">
                <div class="border-4 border-gray-200 dark:border-gray-700 border-t-[#162133] rounded-full w-12 h-12 animate-spin"></div>
            </div>
        }
        else if (featuredListings != null && featuredListings.Any())
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                @foreach (var listing in featuredListings)
                {
                    <article class="bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 transition-all duration-300 hover:border-[#162133] dark:hover:border-gray-500 group cursor-pointer" 
                             @onclick="@(() => HandleViewDetails(listing.Id))">
                        @if (listing.Images != null && listing.Images.Any())
                        {
                            <div class="aspect-[4/3] bg-gray-200 dark:bg-gray-700 overflow-hidden">
                                <img src="@listing.Images[0].Url" 
                                     alt="@listing.Images[0].AltText" 
                                     class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
                            </div>
                        }
                        else
                        {
                            <div class="aspect-[4/3] bg-gray-200 dark:bg-gray-700"></div>
                        }
                        
                        <div class="p-6 md:p-8">
                            <div class="flex justify-between items-start mb-4">
                                <h3 class="text-xl font-bold text-gray-900 dark:text-white">@listing.Title</h3>
                                <span class="inline-flex items-center px-3 py-1 text-xs font-medium uppercase tracking-wider bg-green-50 dark:bg-green-900/30 text-green-800 dark:text-green-300 border border-green-200 dark:border-green-700">
                                    @listing.Status
                                </span>
                            </div>
                            
                            <p class="text-gray-600 dark:text-gray-400 mb-6 line-clamp-2 text-sm">@listing.Description</p>
                            
                            <div class="text-4xl font-bold text-[#162133] dark:text-white tracking-tight mb-6">
                                $@listing.Price.ToString("N0")
                            </div>
                            
                            <div class="grid grid-cols-3 gap-4 pt-4 border-t border-gray-200 dark:border-gray-700">
                                <div class="text-center">
                                    <div class="text-2xl font-bold text-[#162133] dark:text-white">@listing.Bedrooms</div>
                                    <div class="text-xs uppercase tracking-wider text-gray-500 dark:text-gray-400">Rec</div>
                                </div>
                                <div class="text-center">
                                    <div class="text-2xl font-bold text-[#162133] dark:text-white">@listing.Bathrooms</div>
                                    <div class="text-xs uppercase tracking-wider text-gray-500 dark:text-gray-400">Baños</div>
                                </div>
                                <div class="text-center">
                                    <div class="text-2xl font-bold text-[#162133] dark:text-white">@listing.Area</div>
                                    <div class="text-xs uppercase tracking-wider text-gray-500 dark:text-gray-400">m²</div>
                                </div>
                            </div>
                        </div>
                    </article>
                }
            </div>
            
            <div class="text-center mt-16">
                <button @onclick="@(() => Navigation.NavigateTo("/properties"))" 
                        class="px-6 py-3 text-sm font-medium uppercase tracking-wider bg-transparent text-[#162133] dark:text-white border-2 border-[#162133] dark:border-white hover:bg-[#162133] hover:text-white dark:hover:bg-white dark:hover:text-[#162133] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#162133] transition-all duration-200">
                    Ver Todas las Propiedades
                </button>
            </div>
        }
        else
        {
            <div class="text-center py-20">
                <p class="text-gray-500 dark:text-gray-400 uppercase tracking-wider text-sm">
                    No hay propiedades disponibles en este momento
                </p>
            </div>
        }
    </div>
</section>

@code {
    private List<ListingDto> featuredListings = new();
    private bool isLoading = true;
    private int totalListings = 0;
    private int totalArchitects = 0;
    private int totalContacts = 0;
    
    protected override async Task OnInitializedAsync()
    {
        await Task.WhenAll(
            LoadFeaturedListings(),
            LoadStats()
        );
    }
    
    private async Task LoadFeaturedListings()
    {
        isLoading = true;
        
        try
        {
            var result = await ListingAppService.GetListAsync(new GetListingsInput
            {
                MaxResultCount = 6,
                Sorting = "CreatedAt DESC",
                Status = (int)cima.Domain.Shared.ListingStatus.Published
            });
            
            featuredListings = result.Items.ToList();
            totalListings = (int)result.TotalCount;
        }
        catch
        {
            featuredListings = new List<ListingDto>();
        }
        finally
        {
            isLoading = false;
        }
    }
    
    private async Task LoadStats()
    {
        totalArchitects = 24;
        totalContacts = 187;
        await Task.CompletedTask;
    }
    
    private void HandleViewDetails(Guid listingId)
    {
        Navigation.NavigateTo($"/properties/{listingId}");
    }
}
