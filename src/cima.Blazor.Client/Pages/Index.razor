@page "/"
@attribute [AllowAnonymous]
@using Microsoft.AspNetCore.Authorization
@inherits cimaComponentBase

<PageTitle>CIMA - @L["Home"]</PageTitle>

@* Remover todos los gaps y padding entre secciones *@
<div class="no-section-gap">
    @* Hero Section con búsqueda - Fullscreen *@
    <section class="cima-hero no-section-gap">
        <HeroSection />
    </section>

    @* Propiedades Destacadas - Fullscreen con fondo gris claro *@
    <section class="cima-section-fullscreen cima-bg-light no-section-gap">
        <div class="cima-container w-full">
            <FeaturedPropertiesSection PageSize="6" />
        </div>
    </section>

    @* Sección de Contacto - Fullscreen con fondo blanco *@
    <section class="cima-section-fullscreen bg-white no-section-gap">
        <div class="cima-container">
            <div class="max-w-4xl mx-auto">
                <div class="text-center mb-12 cima-fade-in">
                    <h2 class="cima-heading-2 mb-4">
                        @L["Contact:Title"]
                    </h2>
                    <p class="cima-subtitle">
                        @L["Contact:Subtitle"]
                    </p>
                </div>
                <div class="cima-slide-up">
                    <ContactForm />
                </div>
            </div>
        </div>
    </section>
</div>

<style>
    /* Asegurar que no haya gaps ni márgenes */
    :global(body) {
        margin: 0;
        padding: 0;
    }

    .no-section-gap section {
        margin: 0 !important;
        padding: 0 !important;
    }
</style>

