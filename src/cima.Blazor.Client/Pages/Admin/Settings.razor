@page "/admin/settings"
@rendermode InteractiveAuto
@using System
@using cima.Settings
@using cima.Permissions
@attribute [Authorize(cimaPermissions.Settings.Manage)]
@inject ISiteSettingsAppService SettingsService
@inject ISnackbar Snackbar
@inherits cimaComponentBase

<PageTitle>@L["Admin:Settings:PageTitle"]</PageTitle>

<div class="min-h-screen bg-gray-50 pt-20">
    <div class="cima-container py-8">
        <div class="mb-8">
            <h1 class="text-3xl font-display font-bold text-gray-900">@L["Admin:Settings:Title"]</h1>
            <p class="mt-2 text-gray-600">@L["Admin:Settings:Subtitle"]</p>
        </div>

        @if (IsLoading)
        {
            <div class="flex justify-center py-12">
                <div class="cima-spinner"></div>
            </div>
        }
        else if (CurrentSettings != null)
        {
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                @* Configuración de Email *@
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-lg font-semibold text-gray-900">@L["Admin:Settings:Email:Title"]</h2>
                            <p class="text-sm text-gray-500">@L["Admin:Settings:Email:Subtitle"]</p>
                        </div>
                        @if (CurrentSettings.IsEmailConfigured)
                        {
                            <span class="ml-auto px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">@L["Admin:Settings:Email:Configured"]</span>
                        }
                        else
                        {
                            <span class="ml-auto px-2 py-1 text-xs font-medium bg-yellow-100 text-yellow-800 rounded-full">@L["Admin:Settings:Email:Pending"]</span>
                        }
                    </div>

                    <EditForm Model="@EmailSettings" OnValidSubmit="SaveEmailSettings">
                        <DataAnnotationsValidator />
                        
                        <div class="space-y-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    @L["Admin:Settings:Email:NotificationEmail"]
                                </label>
                                <InputText @bind-Value="EmailSettings.AdminNotificationEmail" 
                                           class="cima-input" 
                                           placeholder="admin@4cima.com" />
                                <ValidationMessage For="@(() => EmailSettings.AdminNotificationEmail)" class="text-red-500 text-sm" />
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Proveedor</label>
                                <select class="cima-input" @bind="EmailSettings.EmailProvider">
                                    <option value="@EmailProviderNames.AzureCommunicationServices">Azure Communication Services</option>
                                    <option value="@EmailProviderNames.Smtp">SMTP / Relay</option>
                                    <option value="@EmailProviderNames.Brevo">Brevo (Sendinblue)</option>
                                </select>
                            </div>

                            @if (IsAzureProvider)
                            {
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        @L["Admin:Settings:Email:Connection"]
                                    </label>
                                    <InputText @bind-Value="EmailSettings.AzureEmailConnectionString" 
                                               class="cima-input font-mono text-sm" 
                                               placeholder="endpoint=https://xxx.communication.azure.com/;accesskey=..." />
                                    <p class="text-xs text-gray-500 mt-1">@L["Admin:Settings:Email:ConnectionHint"]</p>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        @L["Admin:Settings:Email:Sender"]
                                    </label>
                                    <InputText @bind-Value="EmailSettings.AzureEmailSenderAddress" 
                                               class="cima-input" 
                                               placeholder="DoNotReply@xxx.azurecomm.net" />
                                </div>
                            }

                            @if (IsSmtpProvider)
                            {
                                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">SMTP Host</label>
                                        <InputText @bind-Value="EmailSettings.SmtpHost" class="cima-input" placeholder="smtp.mi-dominio.com" />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Puerto</label>
                                        <InputNumber @bind-Value="EmailSettings.SmtpPort" class="cima-input" placeholder="587" />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Usuario</label>
                                        <InputText @bind-Value="EmailSettings.SmtpUserName" class="cima-input" placeholder="apikey/usuario" />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Contraseña / API key</label>
                                        <InputText @bind-Value="EmailSettings.SmtpPassword" type="password" class="cima-input" placeholder="****************" />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Remitente (email)</label>
                                        <InputText @bind-Value="EmailSettings.SmtpFromAddress" class="cima-input" placeholder="notificaciones@4cima.com" />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Nombre remitente</label>
                                        <InputText @bind-Value="EmailSettings.SmtpFromName" class="cima-input" placeholder="4cima" />
                                    </div>
                                    <div class="flex items-center gap-2">
                                        <InputCheckbox @bind-Value="EmailSettings.SmtpEnableSsl" class="w-5 h-5" />
                                        <span class="text-sm text-gray-700">Usar SSL/TLS</span>
                                    </div>
                                </div>
                            }

                            @if (IsBrevoProvider)
                            {
                                <div class="space-y-3">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">API Key</label>
                                        <InputText @bind-Value="EmailSettings.BrevoApiKey" class="cima-input font-mono text-xs" placeholder="xkeysib-..." />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Remitente (email)</label>
                                        <InputText @bind-Value="EmailSettings.BrevoSenderEmail" class="cima-input" placeholder="notificaciones@4cima.com" />
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Nombre remitente</label>
                                        <InputText @bind-Value="EmailSettings.BrevoSenderName" class="cima-input" placeholder="4cima" />
                                    </div>
                                </div>
                            }

                            <div class="flex gap-3 pt-4">
                                <button type="submit" class="cima-btn cima-btn-primary" disabled="@IsSavingEmail">
                                    @if (IsSavingEmail)
                                    {
                                        <span class="cima-spinner-sm mr-2"></span>
                                    }
                                    @L["Admin:Settings:Email:Save"]
                                </button>
                                <button type="button" @onclick="TestEmail" class="cima-btn cima-btn-secondary" disabled="@IsTestingEmail">
                                    @if (IsTestingEmail)
                                    {
                                        <span class="cima-spinner-sm mr-2"></span>
                                    }
                                    @L["Admin:Settings:Email:Test"]
                                </button>
                            </div>
                        </div>
                    </EditForm>
                </div>

                @* Configuración de WhatsApp *@
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-lg font-semibold text-gray-900">@L["Admin:Settings:WhatsApp:Title"]</h2>
                            <p class="text-sm text-gray-500">@L["Admin:Settings:WhatsApp:Subtitle"]</p>
                        </div>
                        @if (CurrentSettings.IsWhatsAppConfigured)
                        {
                            <span class="ml-auto px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">@L["Admin:Settings:WhatsApp:Active"]</span>
                        }
                    </div>

                    <EditForm Model="@WhatsAppSettings" OnValidSubmit="SaveWhatsAppSettings">
                        <DataAnnotationsValidator />
                        
                        <div class="space-y-4">
                            <div class="flex items-center gap-3">
                                <InputCheckbox @bind-Value="WhatsAppSettings.Enabled" class="w-5 h-5 text-green-600 rounded" />
                                <label class="text-sm font-medium text-gray-700">@L["Admin:Settings:WhatsApp:EnableLabel"]</label>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    @L["Admin:Settings:WhatsApp:Number"]
                                </label>
                                <div class="flex items-center gap-2">
                                    <span class="text-gray-500">+</span>
                                    <InputText @bind-Value="WhatsAppSettings.PhoneNumber" 
                                               class="cima-input" 
                                               placeholder="5215512345678"
                                               disabled="@(!WhatsAppSettings.Enabled)" />
                                </div>
                                <p class="text-xs text-gray-500 mt-1">@L["Admin:Settings:WhatsApp:NumberHint"]</p>
                                <ValidationMessage For="@(() => WhatsAppSettings.PhoneNumber)" class="text-red-500 text-sm" />
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">
                                    @L["Admin:Settings:WhatsApp:DefaultMessage"]
                                </label>
                                <InputTextArea @bind-Value="WhatsAppSettings.DefaultMessage" 
                                               class="cima-input" 
                                               rows="3"
                                               placeholder="Hola, me interesa obtener mas informacion..."
                                               disabled="@(!WhatsAppSettings.Enabled)" />
                            </div>

                            @if (WhatsAppSettings.Enabled && !string.IsNullOrEmpty(WhatsAppSettings.PhoneNumber))
                            {
                                <div class="p-4 bg-green-50 rounded-lg">
                                    <p class="text-sm text-green-800 mb-2">@L["Admin:Settings:WhatsApp:Preview"]</p>
                                    <a href="@GetWhatsAppUrl()" target="_blank" class="text-green-600 hover:underline text-sm break-all">
                                        @GetWhatsAppUrl()
                                    </a>
                                </div>
                            }

                            <div class="pt-4">
                                <button type="submit" class="cima-btn cima-btn-primary" disabled="@IsSavingWhatsApp">
                                    @if (IsSavingWhatsApp)
                                    {
                                        <span class="cima-spinner-sm mr-2"></span>
                                    }
                                    @L["Admin:Settings:WhatsApp:Save"]
                                </button>
                            </div>
                        </div>
                    </EditForm>
                </div>

                @* Información del Negocio *@
                <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 lg:col-span-2">
                    <div class="flex items-center gap-3 mb-6">
                        <div class="w-10 h-10 bg-navy-100 rounded-lg flex items-center justify-center">
                            <svg class="w-5 h-5 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                            </svg>
                        </div>
                        <div>
                            <h2 class="text-lg font-semibold text-gray-900">@L["Admin:Settings:Business:Title"]</h2>
                            <p class="text-sm text-gray-500">@L["Admin:Settings:Business:Subtitle"]</p>
                        </div>
                    </div>

                    <EditForm Model="@BusinessInfo" OnValidSubmit="SaveBusinessInfo">
                        <DataAnnotationsValidator />
                        
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">@L["Admin:Settings:Business:Name"]</label>
                                <InputText @bind-Value="BusinessInfo.BusinessName" class="cima-input" />
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">@L["Admin:Settings:Business:PublicEmail"]</label>
                                <InputText @bind-Value="BusinessInfo.ContactEmail" class="cima-input" placeholder="contacto@4cima.com" />
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">@L["Admin:Settings:Business:Phone"]</label>
                                <InputText @bind-Value="BusinessInfo.ContactPhone" class="cima-input" placeholder="+52 55 1234 5678" />
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">@L["Admin:Settings:Business:Address"]</label>
                                <InputText @bind-Value="BusinessInfo.Address" class="cima-input" placeholder="Col. Polanco, CDMX" />
                            </div>

                            <div class="md:col-span-2">
                                <h3 class="text-sm font-medium text-gray-700 mb-3">@L["Admin:Settings:Business:Social"]</h3>
                                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                    <div>
                                        <label class="block text-xs text-gray-500 mb-1">@L["Admin:Settings:Business:Facebook"]</label>
                                        <InputText @bind-Value="BusinessInfo.FacebookUrl" class="cima-input" placeholder="https://facebook.com/4cima" />
                                    </div>
                                    <div>
                                        <label class="block text-xs text-gray-500 mb-1">@L["Admin:Settings:Business:Instagram"]</label>
                                        <InputText @bind-Value="BusinessInfo.InstagramUrl" class="cima-input" placeholder="https://instagram.com/4cima" />
                                    </div>
                                    <div>
                                        <label class="block text-xs text-gray-500 mb-1">@L["Admin:Settings:Business:LinkedIn"]</label>
                                        <InputText @bind-Value="BusinessInfo.LinkedInUrl" class="cima-input" placeholder="https://linkedin.com/company/4cima" />
                                    </div>
                                </div>
                            </div>

                            <div class="md:col-span-2">
                                <h3 class="text-sm font-medium text-gray-700 mb-3">@L["Admin:Settings:Business:Hours"]</h3>
                                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                    <div>
                                        <label class="block text-xs text-gray-500 mb-1">@L["Admin:Settings:Business:Weekday"]</label>
                                        <InputText @bind-Value="BusinessInfo.BusinessHoursWeekday" class="cima-input" />
                                    </div>
                                    <div>
                                        <label class="block text-xs text-gray-500 mb-1">@L["Admin:Settings:Business:Saturday"]</label>
                                        <InputText @bind-Value="BusinessInfo.BusinessHoursSaturday" class="cima-input" />
                                    </div>
                                    <div>
                                        <label class="block text-xs text-gray-500 mb-1">@L["Admin:Settings:Business:Sunday"]</label>
                                        <InputText @bind-Value="BusinessInfo.BusinessHoursSunday" class="cima-input" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="pt-6">
                            <button type="submit" class="cima-btn cima-btn-primary" disabled="@IsSavingBusiness">
                                @if (IsSavingBusiness)
                                {
                                    <span class="cima-spinner-sm mr-2"></span>
                                }
                                @L["Admin:Settings:Business:Save"]
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        }
    </div>
</div>

@code {
    private bool IsLoading { get; set; } = true;
    private bool IsSavingEmail { get; set; }
    private bool IsSavingWhatsApp { get; set; }
    private bool IsSavingBusiness { get; set; }
    private bool IsTestingEmail { get; set; }

    private SiteSettingsDto? CurrentSettings { get; set; }
    private UpdateEmailSettingsDto EmailSettings { get; set; } = new();
    private UpdateWhatsAppSettingsDto WhatsAppSettings { get; set; } = new();
    private UpdateBusinessInfoDto BusinessInfo { get; set; } = new();
    private bool IsAzureProvider => string.Equals(EmailSettings.EmailProvider, EmailProviderNames.AzureCommunicationServices, StringComparison.OrdinalIgnoreCase);
    private bool IsSmtpProvider => string.Equals(EmailSettings.EmailProvider, EmailProviderNames.Smtp, StringComparison.OrdinalIgnoreCase);
    private bool IsBrevoProvider => string.Equals(EmailSettings.EmailProvider, EmailProviderNames.Brevo, StringComparison.OrdinalIgnoreCase);

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await LoadSettings();
    }

    private async Task LoadSettings()
    {
        try
        {
            IsLoading = true;
            CurrentSettings = await SettingsService.GetAsync();
            
            // Mapear a DTOs de edición
            EmailSettings = new UpdateEmailSettingsDto
            {
                AdminNotificationEmail = CurrentSettings.AdminNotificationEmail ?? "",
                EmailProvider = CurrentSettings.EmailProvider ?? EmailProviderNames.AzureCommunicationServices,
                AzureEmailConnectionString = CurrentSettings.AzureEmailConnectionString,
                AzureEmailSenderAddress = CurrentSettings.AzureEmailSenderAddress,
                SmtpHost = CurrentSettings.SmtpHost,
                SmtpPort = CurrentSettings.SmtpPort,
                SmtpUserName = CurrentSettings.SmtpUserName,
                SmtpPassword = CurrentSettings.SmtpPassword,
                SmtpFromAddress = CurrentSettings.SmtpFromAddress,
                SmtpFromName = CurrentSettings.SmtpFromName,
                SmtpEnableSsl = CurrentSettings.SmtpEnableSsl,
                BrevoApiKey = CurrentSettings.BrevoApiKey,
                BrevoSenderEmail = CurrentSettings.BrevoSenderEmail,
                BrevoSenderName = CurrentSettings.BrevoSenderName
            };

            WhatsAppSettings = new UpdateWhatsAppSettingsDto
            {
                Enabled = CurrentSettings.WhatsAppEnabled,
                PhoneNumber = CurrentSettings.WhatsAppNumber,
                DefaultMessage = CurrentSettings.WhatsAppDefaultMessage
            };

            BusinessInfo = new UpdateBusinessInfoDto
            {
                BusinessName = CurrentSettings.BusinessName,
                ContactPhone = CurrentSettings.ContactPhone,
                ContactEmail = CurrentSettings.ContactEmail,
                Address = CurrentSettings.Address,
                FacebookUrl = CurrentSettings.FacebookUrl,
                InstagramUrl = CurrentSettings.InstagramUrl,
                LinkedInUrl = CurrentSettings.LinkedInUrl,
                BusinessHoursWeekday = CurrentSettings.BusinessHoursWeekday,
                BusinessHoursSaturday = CurrentSettings.BusinessHoursSaturday,
                BusinessHoursSunday = CurrentSettings.BusinessHoursSunday
            };
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task SaveEmailSettings()
    {
        try
        {
            IsSavingEmail = true;
            await SettingsService.UpdateEmailSettingsAsync(EmailSettings);
            Snackbar.Add(L["Admin:Settings:Email:Saved"], Severity.Success);
            await LoadSettings();
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
        finally
        {
            IsSavingEmail = false;
        }
    }

    private async Task SaveWhatsAppSettings()
    {
        try
        {
            IsSavingWhatsApp = true;
            await SettingsService.UpdateWhatsAppSettingsAsync(WhatsAppSettings);
            Snackbar.Add(L["Admin:Settings:WhatsApp:Saved"], Severity.Success);
            await LoadSettings();
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
        finally
        {
            IsSavingWhatsApp = false;
        }
    }

    private async Task SaveBusinessInfo()
    {
        try
        {
            IsSavingBusiness = true;
            await SettingsService.UpdateBusinessInfoAsync(BusinessInfo);
            Snackbar.Add(L["Admin:Settings:Business:Saved"], Severity.Success);
            await LoadSettings();
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
        finally
        {
            IsSavingBusiness = false;
        }
    }

    private async Task TestEmail()
    {
        if (string.IsNullOrEmpty(EmailSettings.AdminNotificationEmail))
        {
            Snackbar.Add(L["Admin:Settings:Email:MissingEmail"], Severity.Warning);
            return;
        }

        try
        {
            IsTestingEmail = true;

            var testInput = new TestEmailSettingsDto
            {
                TargetEmail = EmailSettings.AdminNotificationEmail,
                EmailProvider = EmailSettings.EmailProvider,
                
                // Azure
                AzureEmailConnectionString = EmailSettings.AzureEmailConnectionString,
                AzureEmailSenderAddress = EmailSettings.AzureEmailSenderAddress,
                
                // SMTP
                SmtpHost = EmailSettings.SmtpHost,
                SmtpPort = EmailSettings.SmtpPort,
                SmtpUserName = EmailSettings.SmtpUserName,
                SmtpPassword = EmailSettings.SmtpPassword,
                SmtpFromAddress = EmailSettings.SmtpFromAddress,
                SmtpFromName = EmailSettings.SmtpFromName,
                SmtpEnableSsl = EmailSettings.SmtpEnableSsl,
                
                // Brevo
                BrevoApiKey = EmailSettings.BrevoApiKey,
                BrevoSenderEmail = EmailSettings.BrevoSenderEmail,
                BrevoSenderName = EmailSettings.BrevoSenderName
            };

            var success = await SettingsService.TestEmailAsync(testInput);
            
            if (success)
            {
                Snackbar.Add(L["Admin:Settings:Email:TestSuccess", EmailSettings.AdminNotificationEmail], Severity.Success);
            }
            else
            {
                Snackbar.Add(L["Admin:Settings:Email:TestError"], Severity.Error);
            }
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
        finally
        {
            IsTestingEmail = false;
        }
    }

    private string GetWhatsAppUrl()
    {
        if (string.IsNullOrEmpty(WhatsAppSettings.PhoneNumber)) return "";
        
        var message = string.IsNullOrEmpty(WhatsAppSettings.DefaultMessage) 
            ? "" 
            : $"?text={Uri.EscapeDataString(WhatsAppSettings.DefaultMessage)}";
        
        return $"https://wa.me/{WhatsAppSettings.PhoneNumber}{message}";
    }
}
