@page "/admin"
@page "/admin/dashboard"
@using cima.Statistics
@attribute [Authorize]
@inject IStatisticsAppService StatisticsService
@inherits cimaComponentBase

<PageTitle>@L["Dashboard:Title"] - @L["CompanyName"]</PageTitle>

<div class="min-h-screen bg-neutral-50">
    @* Header *@
    <div class="bg-white border-b border-neutral-200">
        <div class="cima-container py-6">
            <h1 class="text-2xl md:text-3xl font-display font-bold text-neutral-900">
                @L["Dashboard:Welcome"]
            </h1>
            <p class="text-neutral-600 mt-1">
                @L["Dashboard:Subtitle"]
            </p>
        </div>
    </div>

    @* Content *@
    <div class="cima-container py-8">
        @if (IsLoading)
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                @for (int i = 0; i < 4; i++)
                {
                    <div class="cima-card p-6">
                        <div class="cima-skeleton-text w-20 mb-2"></div>
                        <div class="cima-skeleton-text w-16 h-8 mb-1"></div>
                        <div class="cima-skeleton-text w-24"></div>
                    </div>
                }
            </div>
        }
        else if (Stats != null)
        {
            @* Stats Cards *@
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
                @* Total Listings *@
                <div class="cima-card p-6 hover:shadow-lg transition-shadow">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm font-medium text-neutral-600">@L["Dashboard:TotalListings"]</span>
                        <svg class="w-8 h-8 text-navy-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                    </div>
                    <div class="text-3xl font-bold text-neutral-900 mb-1">
                        @Stats.TotalListings
                    </div>
                    <div class="text-xs text-neutral-500">
                        <span class="text-success font-medium">@Stats.PublishedListings</span> publicadas
                    </div>
                </div>

                @* Architects *@
                <div class="cima-card p-6 hover:shadow-lg transition-shadow">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm font-medium text-neutral-600">@L["Dashboard:TotalArchitects"]</span>
                        <svg class="w-8 h-8 text-navy-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                    </div>
                    <div class="text-3xl font-bold text-neutral-900 mb-1">
                        @Stats.TotalArchitects
                    </div>
                    <div class="text-xs text-neutral-500">
                        <span class="text-success font-medium">@Stats.ActiveArchitects</span> activos
                    </div>
                </div>

                @* Contact Requests *@
                <div class="cima-card p-6 hover:shadow-lg transition-shadow">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm font-medium text-neutral-600">@L["Dashboard:ContactRequests"]</span>
                        <svg class="w-8 h-8 text-navy-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                    </div>
                    <div class="text-3xl font-bold text-neutral-900 mb-1">
                        @Stats.TotalContactRequests
                    </div>
                    <div class="text-xs text-neutral-500">
                        <span class="text-warning font-medium">@Stats.PendingContactRequests</span> pendientes
                    </div>
                </div>

                @* Drafts *@
                <div class="cima-card p-6 hover:shadow-lg transition-shadow">
                    <div class="flex items-center justify-between mb-2">
                        <span class="text-sm font-medium text-neutral-600">@L["Dashboard:DraftListings"]</span>
                        <svg class="w-8 h-8 text-navy-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                    </div>
                    <div class="text-3xl font-bold text-neutral-900 mb-1">
                        @Stats.DraftListings
                    </div>
                    <div class="text-xs text-neutral-500">
                        <span class="text-danger font-medium">@Stats.ArchivedListings</span> archivadas
                    </div>
                </div>
            </div>

            @* Quick Actions *@
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-8">
                <a href="/admin/listings/create" class="cima-card p-6 hover:shadow-lg hover:border-navy-500 transition-all group">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 rounded-full bg-navy-50 flex items-center justify-center group-hover:bg-navy-100 transition-colors">
                            <svg class="w-6 h-6 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                            </svg>
                        </div>
                        <div>
                            <div class="font-semibold text-neutral-900 group-hover:text-navy-600 transition-colors">
                                @L["Dashboard:NewListing"]
                            </div>
                            <div class="text-sm text-neutral-600">
                                @L["Dashboard:NewListingDesc"]
                            </div>
                        </div>
                    </div>
                </a>

                <a href="/admin/architects/create" class="cima-card p-6 hover:shadow-lg hover:border-navy-500 transition-all group">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 rounded-full bg-navy-50 flex items-center justify-center group-hover:bg-navy-100 transition-colors">
                            <svg class="w-6 h-6 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                      d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                            </svg>
                        </div>
                        <div>
                            <div class="font-semibold text-neutral-900 group-hover:text-navy-600 transition-colors">
                                @L["Dashboard:NewArchitect"]
                            </div>
                            <div class="text-sm text-neutral-600">
                                @L["Dashboard:NewArchitectDesc"]
                            </div>
                        </div>
                    </div>
                </a>

                <a href="/admin/contact-requests" class="cima-card p-6 hover:shadow-lg hover:border-navy-500 transition-all group">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 rounded-full bg-navy-50 flex items-center justify-center group-hover:bg-navy-100 transition-colors">
                            <svg class="w-6 h-6 text-navy-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                      d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4" />
                            </svg>
                        </div>
                        <div>
                            <div class="font-semibold text-neutral-900 group-hover:text-navy-600 transition-colors">
                                @L["Dashboard:ViewRequests"]
                            </div>
                            <div class="text-sm text-neutral-600">
                                @L["Dashboard:ViewRequestsDesc"]
                            </div>
                        </div>
                    </div>
                </a>
            </div>

            @* Recent Activity *@
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <div class="cima-card p-6">
                    <h3 class="text-lg font-semibold text-neutral-900 mb-4">
                        @L["Dashboard:RecentActivity"]
                    </h3>
                    <div class="text-center py-8 text-neutral-500">
                        <svg class="w-12 h-12 mx-auto mb-3 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <p>@L["Dashboard:NoRecentActivity"]</p>
                    </div>
                </div>

                <div class="cima-card p-6">
                    <h3 class="text-lg font-semibold text-neutral-900 mb-4">
                        @L["Dashboard:SystemStatus"]
                    </h3>
                    <div class="space-y-3">
                        <div class="flex items-center justify-between p-3 bg-success-light rounded-lg">
                            <div class="flex items-center gap-3">
                                <div class="w-2 h-2 bg-success rounded-full"></div>
                                <span class="text-sm font-medium text-neutral-900">@L["Dashboard:DatabaseConnection"]</span>
                            </div>
                            <span class="text-xs text-success font-medium">@L["Common:Active"]</span>
                        </div>

                        <div class="flex items-center justify-between p-3 bg-success-light rounded-lg">
                            <div class="flex items-center gap-3">
                                <div class="w-2 h-2 bg-success rounded-full"></div>
                                <span class="text-sm font-medium text-neutral-900">@L["Dashboard:ApiStatus"]</span>
                            </div>
                            <span class="text-xs text-success font-medium">@L["Common:Active"]</span>
                        </div>

                        <div class="flex items-center justify-between p-3 bg-neutral-50 rounded-lg">
                            <span class="text-sm text-neutral-600">@L["Dashboard:LastUpdate"]</span>
                            <span class="text-xs font-medium text-neutral-900">
                                @Stats.LastUpdated.ToLocalTime().ToString("g")
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-16">
                <svg class="w-20 h-20 mx-auto text-neutral-400 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h3 class="text-xl font-semibold text-neutral-900 mb-2">
                    @L["Dashboard:ErrorLoading"]
                </h3>
                <button @onclick="LoadStats" class="cima-btn cima-btn-primary mt-4">
                    @L["Common:Retry"]
                </button>
            </div>
        }
    </div>
</div>

@code {
    private bool IsLoading { get; set; } = true;
    private DashboardStatsDto? Stats { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadStats();
    }

    private async Task LoadStats()
    {
        try
        {
            IsLoading = true;
            Stats = await StatisticsService.GetDashboardAsync();
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
            Stats = null;
        }
        finally
        {
            IsLoading = false;
        }
    }
}
