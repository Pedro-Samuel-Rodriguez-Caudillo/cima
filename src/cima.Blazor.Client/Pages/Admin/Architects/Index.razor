@page "/admin/architects"
@using cima.Architects
@using cima.Permissions
@attribute [Authorize(cimaPermissions.Architects.Default)]
@inject IArchitectAppService ArchitectService
@inject NavigationManager NavManager
@inject IUiMessageService MessageService
@inherits cimaComponentBase

<PageTitle>Gestionar Arquitectos - @L["CompanyName"]</PageTitle>

<div class="min-h-screen bg-neutral-50">
    @* Header *@
    <div class="bg-white border-b border-neutral-200">
        <div class="cima-container py-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div>
                    <h1 class="text-2xl md:text-3xl font-display font-bold text-neutral-900">
                        Gestionar Arquitectos
                    </h1>
                    <p class="text-neutral-600 mt-1">
                        Administra los perfiles de arquitectos del sistema
                    </p>
                </div>
            </div>
        </div>
    </div>

    @* Content *@
    <div class="cima-container py-8">
        @if (IsLoading)
        {
            <div class="cima-card">
                <div class="p-6 space-y-4">
                    @for (int i = 0; i < 5; i++)
                    {
                        <div class="flex items-center gap-4">
                            <div class="cima-skeleton-image w-16 h-16 rounded-full"></div>
                            <div class="flex-1 space-y-2">
                                <div class="cima-skeleton-text w-2/3"></div>
                                <div class="cima-skeleton-text w-1/2"></div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else if (Architects?.Any() == true)
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var architect in Architects)
                {
                    <div class="cima-card p-6">
                        <div class="flex items-start gap-4 mb-4">
                            <!-- Avatar -->
                            <div class="w-16 h-16 bg-navy-500 rounded-full flex items-center justify-center text-white text-xl font-bold flex-shrink-0">
                                @GetInitials(architect.UserName)
                            </div>

                            <!-- Info -->
                            <div class="flex-1 min-w-0">
                                <h3 class="font-semibold text-lg text-neutral-900 truncate mb-1">
                                    @architect.UserName
                                </h3>
                                <div class="flex items-center gap-2 text-sm text-neutral-600">
                                    @if (architect.IsActive)
                                    {
                                        <span class="inline-flex items-center px-2 py-1 rounded-full bg-success-light text-success text-xs font-medium">
                                            <span class="w-1.5 h-1.5 bg-success rounded-full mr-1"></span>
                                            Activo
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="inline-flex items-center px-2 py-1 rounded-full bg-neutral-200 text-neutral-700 text-xs font-medium">
                                            <span class="w-1.5 h-1.5 bg-neutral-500 rounded-full mr-1"></span>
                                            Inactivo
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Stats -->
                        <div class="grid grid-cols-2 gap-4 mb-4 pt-4 border-t border-neutral-200">
                            <div>
                                <p class="text-2xl font-bold text-navy-600">@architect.TotalListingsPublished</p>
                                <p class="text-xs text-neutral-600">Total Publicadas</p>
                            </div>
                            <div>
                                <p class="text-2xl font-bold text-success">@architect.ActiveListings</p>
                                <p class="text-xs text-neutral-600">Activas</p>
                            </div>
                        </div>

                        <!-- Meta -->
                        <div class="text-xs text-neutral-500 mb-4">
                            <p>Registro: @architect.RegistrationDate.ToString("dd/MM/yyyy")</p>
                            <p class="font-mono">ID: @architect.UserId.ToString().Substring(0, 8)...</p>
                        </div>

                        <!-- Actions -->
                        <div class="flex gap-2">
                            <button @onclick="() => ViewArchitect(architect.Id)" 
                                    class="flex-1 cima-btn cima-btn-sm cima-btn-secondary">
                                Ver Detalles
                            </button>
                            
                            @if (architect.IsActive)
                            {
                                <button @onclick="() => DeactivateArchitect(architect.Id)" 
                                        class="cima-btn cima-btn-sm cima-btn-danger">
                                    Desactivar
                                </button>
                            }
                            else
                            {
                                <button @onclick="() => ActivateArchitect(architect.Id)" 
                                        class="cima-btn cima-btn-sm cima-btn-primary">
                                    Activar
                                </button>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="cima-card p-16 text-center">
                <svg class="w-20 h-20 mx-auto text-neutral-400 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                </svg>
                <h3 class="text-xl font-semibold text-neutral-900 mb-2">
                    No hay arquitectos registrados
                </h3>
                <p class="text-neutral-600">
                    Los usuarios con perfiles de arquitecto aparecerán aquí
                </p>
            </div>
        }
    </div>
</div>

@code {
    private bool IsLoading { get; set; } = true;
    private List<ArchitectDto>? Architects { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadArchitects();
    }

    private async Task LoadArchitects()
    {
        try
        {
            IsLoading = true;

            var input = new Volo.Abp.Application.Dtos.PagedAndSortedResultRequestDto
            {
                MaxResultCount = 100,
                Sorting = "RegistrationDate DESC"
            };

            var result = await ArchitectService.GetListAsync(input);
            Architects = result.Items.ToList();
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
        finally
        {
            IsLoading = false;
        }
    }

    private void ViewArchitect(Guid id)
    {
        NavManager.NavigateTo($"/admin/architects/{id}");
    }

    private async Task DeactivateArchitect(Guid id)
    {
        var confirmed = await MessageService.Confirm("¿Estás seguro de desactivar este arquitecto?");
        if (!confirmed)
            return;

        try
        {
            var updateDto = new UpdateArchitectDto { IsActive = false };
            await ArchitectService.UpdateAsync(id, updateDto);
            await MessageService.Success("Arquitecto desactivado exitosamente");
            await LoadArchitects();
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
    }

    private async Task ActivateArchitect(Guid id)
    {
        try
        {
            var updateDto = new UpdateArchitectDto { IsActive = true };
            await ArchitectService.UpdateAsync(id, updateDto);
            await MessageService.Success("Arquitecto activado exitosamente");
            await LoadArchitects();
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
    }

    private string GetInitials(string? userName)
    {
        if (string.IsNullOrWhiteSpace(userName))
            return "U";

        var parts = userName.Split(' ', StringSplitOptions.RemoveEmptyEntries);
        
        if (parts.Length >= 2)
        {
            return $"{parts[0][0]}{parts[1][0]}".ToUpper();
        }
        
        return userName.Length > 0 ? userName.Substring(0, Math.Min(2, userName.Length)).ToUpper() : "U";
    }
}
