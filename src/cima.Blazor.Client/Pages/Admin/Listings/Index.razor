@page "/admin/listings"
@using cima.Permissions
@using cima.Listings.Outputs
@attribute [Authorize(cimaPermissions.Listings.Default)]
@inherits cimaComponentBase

<PageTitle>@L["Admin:Listings:Title"] - @L["CompanyName"]</PageTitle>

<PageShell>
    @* Header *@
    <div class="bg-white border-b border-neutral-200">
        <div class="cima-container py-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div>
                    <h1 class="text-2xl md:text-3xl font-display font-bold text-neutral-900">
                        @L["Admin:Listings:Title"]
                    </h1>
                    <p class="text-neutral-600 mt-1">
                        @L["Admin:Listings:Subtitle"]
                    </p>
                    <p class="text-sm text-neutral-500 mt-2">
                        @string.Format(L["Admin:Listings:Featured:CountHint"], FeaturedListingCount, MaxFeaturedListings)
                    </p>
                </div>
                <a href="/admin/listings/create" class="cima-btn cima-btn-primary">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    @L["Admin:Listings:Create"]
                </a>
            </div>
        </div>
    </div>

    @* Bulk Actions Bar (visible cuando hay selección) *@
    @if (SelectedIds.Any())
    {
        <div class="bg-navy-600 text-white sticky top-20 z-40 shadow-lg">
            <div class="cima-container py-3">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-4">
                        <button @onclick="ClearSelection" class="p-1 hover:bg-white/20 rounded transition-colors">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                        <span class="font-medium">@string.Format(L["Admin:Listings:SelectedCount"], SelectedIds.Count)</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <button @onclick="BulkPublish" 
                                class="px-3 py-1.5 bg-green-500 hover:bg-green-600 rounded text-sm font-medium transition-colors flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            @L["Admin:Listings:BulkPublish"]
                        </button>
                        <button @onclick="BulkArchive" 
                                class="px-3 py-1.5 bg-yellow-500 hover:bg-yellow-600 rounded text-sm font-medium transition-colors flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                            </svg>
                            @L["Admin:Listings:BulkArchive"]
                        </button>
                        <button @onclick="BulkMoveToPortfolio" 
                                class="px-3 py-1.5 bg-gray-500 hover:bg-gray-600 rounded text-sm font-medium transition-colors flex items-center gap-1">
                             <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                            </svg>
                            @L["Admin:Listings:BulkPortfolio"]
                        </button>
                        <div class="w-px h-6 bg-white/20 mx-1"></div>
                        <button @onclick="BulkDelete" 
                                class="px-3 py-1.5 bg-red-500 hover:bg-red-600 rounded text-sm font-medium transition-colors flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            @L["Admin:Listings:BulkDelete"]
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="cima-container py-8">
        @* Filters *@
        <div class="bg-white rounded-lg shadow-sm border border-neutral-200 p-4 mb-6">
            <div class="grid grid-cols-1 md:grid-cols-5 gap-4">
                <div class="col-span-1 md:col-span-2">
                    <div class="relative">
                        <input type="text" 
                               @bind="SearchTerm" 
                               @onkeyup="HandleSearchKeyUp"
                               placeholder="@L["Admin:Listings:SearchPlaceholder"]" 
                               aria-label="@L["Menu:Search"]"
                               class="w-full pl-10 pr-4 py-2 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-all">
                        <svg class="w-5 h-5 text-neutral-400 absolute left-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                </div>
                <div>
                     <select @bind="StatusFilter" @bind:after="HandleFilterChanged" aria-label="Filtrar por estado" class="w-full px-4 py-2 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-all bg-white">
                        <option value="">@L["Admin:Listings:AllStatuses"]</option>
                        @foreach (ListingStatus status in Enum.GetValues(typeof(ListingStatus)))
                        {
                            <option value="@((int)status)">@EnumLocalizer.GetListingStatusName(status)</option>
                        }
                    </select>
                </div>
                <div>
                    <select @bind="CategoryFilter" @bind:after="HandleFilterChanged" aria-label="Filtrar por categoría" class="w-full px-4 py-2 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-all bg-white">
                        <option value="">@L["Admin:Listings:AllCategories"]</option>
                        @foreach (PropertyCategory category in Enum.GetValues(typeof(PropertyCategory)))
                        {
                            <option value="@((int)category)">@EnumLocalizer.GetPropertyCategoryName(category)</option>
                        }
                    </select>
                </div>
                <div>
                    <select @bind="FeaturedFilter" @bind:after="HandleFilterChanged" aria-label="@L["Admin:Listings:Featured:FilterLabel"]" class="w-full px-4 py-2 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-all bg-white">
                        <option value="">@L["Admin:Listings:Featured:FilterAll"]</option>
                        <option value="featured">@L["Admin:Listings:Featured:FilterOnly"]</option>
                    </select>
                </div>
            </div>
        </div>

        @* Listings Table *@
        <div class="bg-white rounded-lg shadow-sm border border-neutral-200 overflow-hidden">
            @if (IsLoading)
            {
                <div class="p-12 flex justify-center">
                    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
                </div>
            }
            else if (!Listings.Any())
            {
                <div class="p-12 text-center text-neutral-500">
                    <svg class="w-12 h-12 mx-auto mb-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                    <p class="text-lg font-medium">@L["Admin:Listings:NotFound"]</p>
                    <p class="text-sm">@L["Admin:Listings:NotFoundDetail"]</p>
                </div>
            }
            else
            {
                <div class="w-full">
                    @* Table Header *@
                    <div class="bg-neutral-50 px-6 py-3 border-b border-neutral-200 hidden lg:grid lg:grid-cols-12 gap-4 text-xs font-semibold text-neutral-500 uppercase tracking-wider">
                        <div class="col-span-1 flex items-center">
                            <div class="flex items-center">
                                <input type="checkbox" 
                                       checked="@IsAllSelected" 
                                       @onchange="ToggleSelectAll"
                                       aria-label="Seleccionar todas las propiedades"
                                       class="rounded border-neutral-300 text-primary-600 focus:ring-primary-500 h-4 w-4" />
                            </div>
                        </div>
                        <div class="col-span-4">@L["Admin:Listings:TableHeader:Property"]</div>
                        <div class="col-span-2">@L["Admin:Listings:TableHeader:Category"]</div>
                        <div class="col-span-2">@L["Admin:Listings:TableHeader:Price"]</div>
                        <div class="col-span-2">@L["Admin:Listings:TableHeader:Status"]</div>
                        <div class="col-span-1 text-right">@L["Admin:Listings:TableHeader:Actions"]</div>
                    </div>

                    @* Table Body *@
                    <div class="divide-y divide-neutral-200">
                        @foreach (var listing in Listings)
                        {
                            <div @key="listing.Id" class="p-4 lg:px-6 lg:py-4 grid grid-cols-1 lg:grid-cols-12 gap-4 items-center hover:bg-neutral-50 transition-colors group">
                                @* Checkbox *@
                                <div class="col-span-1 flex items-center">
                                    <input type="checkbox" 
                                           checked="@SelectedIds.Contains(listing.Id)" 
                                           @onchange="() => ToggleSelection(listing.Id)"
                                           aria-label="@($"Seleccionar propiedad {listing.Title}")"
                                           class="rounded border-neutral-300 text-primary-600 focus:ring-primary-500 h-4 w-4" />
                                </div>

                                @* Property Info *@
                                <div class="col-span-1 lg:col-span-4 flex items-center gap-4">
                                    <div class="w-16 h-12 bg-neutral-200 rounded overflow-hidden flex-shrink-0 relative">
                                        @{
                                            var coverUrl = listing.MainImage?.Url;
                                        }
                                        @if (!string.IsNullOrWhiteSpace(coverUrl))
                                        {
                                            <img src="@coverUrl"
                                                 alt="@listing.Title"
                                                 class="w-full h-full object-cover" />
                                        }
                                        else
                                        {
                                            <div class="w-full h-full flex items-center justify-center bg-neutral-100 text-neutral-400">
                                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                </svg>
                                            </div>
                                        }
                                    </div>
                                    <div class="overflow-hidden">
                                        <div class="flex items-center gap-2">
                                            <h3 class="font-medium text-neutral-900 truncate" title="@listing.Title">
                                                @listing.Title
                                            </h3>
                                            @if (IsFeatured(listing.Id))
                                            {
                                                <span class="inline-flex items-center gap-1 text-[10px] font-semibold uppercase tracking-wide text-amber-600">
                                                    <MudIcon Icon="@Icons.Material.Filled.Star" Size="Size.Small" />
                                                    @L["Admin:Listings:Featured:Label"]
                                                </span>
                                            }
                                        </div>
                                        <p class="text-sm text-neutral-500 truncate">
                                            @listing.Location?.State, @listing.Location?.City
                                        </p>
                                    </div>
                                </div>

                                @* Category *@
                                <div class="col-span-1 lg:col-span-2 flex items-center">
                                    <span class="text-sm text-neutral-700">
                                        @EnumLocalizer.GetPropertyCategoryName(listing.Category)
                                    </span>
                                </div>

                                @* Price *@
                                <div class="col-span-1 lg:col-span-2 flex items-center">
                                    <span class="text-sm font-semibold text-neutral-900">
                                        @FormatPrice(listing)
                                    </span>
                                </div>

                                @* Status *@
                                <div class="col-span-1 lg:col-span-2 flex items-center">
                                    <MudChip T="string" Size="Size.Small" Color="@GetStatusColor(listing.Status)">
                                        @EnumLocalizer.GetListingStatusName(listing.Status)
                                    </MudChip>
                                </div>

                                @* Actions *@
                                <div class="col-span-1 lg:col-span-1 flex items-center justify-start lg:justify-end flex-wrap gap-1.5">
                                    @* Preview *@
                                    <MudIconButton Icon="@Icons.Material.Filled.Visibility" Size="Size.Small" 
                                        Href="@($"/properties/{listing.Id}")" Target="_blank" title="@L["Admin:Listings:Action:Preview"]" aria-label="@L["Admin:Listings:Action:Preview"]" />

                                    @* Edit *@
                                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" 
                                        Href="@($"/admin/listings/edit/{listing.Id}")" title="@L["Admin:Listings:Action:Edit"]" aria-label="@L["Admin:Listings:Action:Edit"]" />

                                    @* Duplicate *@
                                    <MudIconButton Icon="@Icons.Material.Filled.ContentCopy" Size="Size.Small"
                                        Color="Color.Info" OnClick="@(() => DuplicateListing(listing.Id))" title="@L["Admin:Listings:Action:Duplicate"]" aria-label="@L["Admin:Listings:Action:Duplicate"]" />

                                    @* Featured *@
                                    <MudIconButton Icon="@(IsFeatured(listing.Id) ? Icons.Material.Filled.Star : Icons.Material.Outlined.StarBorder)"
                                                   Size="Size.Small"
                                                   Color="@(IsFeatured(listing.Id) ? Color.Warning : Color.Default)"
                                                   Disabled="@(!CanToggleFeatured(listing))"
                                                   OnClick="@(() => ToggleFeaturedAsync(listing))"
                                                   title="@GetFeaturedActionLabel(listing)"
                                                   aria-label="@GetFeaturedActionLabel(listing)" />

                                    @* Sale *@
                                    <MudIconButton Icon="@Icons.Material.Filled.Payments" Size="Size.Small"
                                                   Color="Color.Primary" OnClick="@(() => OpenSaleDialog(listing))"
                                                   title="@L["Sales:Dialog:Open"]"
                                                   aria-label="@L["Sales:Dialog:Open"]" />

                                    @if (listing.Status == ListingStatus.Draft || listing.Status == ListingStatus.Portfolio)
                                    {
                                        <MudIconButton Icon="@Icons.Material.Filled.Publish" Size="Size.Small" 
                                            Color="Color.Success" OnClick="@(() => PublishListing(listing.Id))" title="Publicar" aria-label="Publicar" />
                                    }
                                    @if (listing.Status == ListingStatus.Published)
                                    {
                                        <MudIconButton Icon="@Icons.Material.Filled.Unpublished" Size="Size.Small"
                                            Color="Color.Default" OnClick="@(() => UnpublishListing(listing.Id))" title="Mover a borrador" aria-label="Mover a borrador" />
                                        <MudIconButton Icon="@Icons.Material.Filled.Style" Size="Size.Small"
                                            Color="Color.Info" OnClick="@(() => MoveListingToPortfolio(listing))" title="Mover a portafolio" aria-label="Mover a portafolio" />
                                    }
                                    @if (listing.Status == ListingStatus.Archived)
                                    {
                                        <MudIconButton Icon="@Icons.Material.Filled.Unarchive" Size="Size.Small"
                                            Color="Color.Primary" OnClick="@(() => UnarchiveListing(listing.Id))" title="Desarchivar" aria-label="Desarchivar" />
                                    }
                                    @if (listing.Status == ListingStatus.Published || listing.Status == ListingStatus.Portfolio)
                                    {
                                        <MudIconButton Icon="@Icons.Material.Filled.Archive" Size="Size.Small" 
                                            Color="Color.Warning" OnClick="@(() => ArchiveListing(listing.Id))" title="Archivar" aria-label="Archivar" />
                                    }

                                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" 
                                        Color="Color.Error" OnClick="@(() => DeleteListing(listing.Id))" title="@L["Admin:Listings:Action:Delete"]" aria-label="@L["Admin:Listings:Action:Delete"]" />
                                </div>
                            </div>
                        }
                    </div>

                    @* Pagination *@
                    <div class="px-6 py-4 border-t border-neutral-200 flex items-center justify-between">
                        <div class="text-sm text-neutral-500">
                             @string.Format(L["Admin:Listings:Pagination:Showing"], (CurrentPage - 1) * PageSize + 1, Math.Min(CurrentPage * PageSize, TotalCount), TotalCount)
                        </div>
                        <div class="flex items-center gap-2">
                            <button class="p-1 rounded hover:bg-neutral-100 disabled:opacity-50"
                                    disabled="@(CurrentPage == 1)"
                                    @onclick="() => GoToPage(CurrentPage - 1)">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                                </svg>
                            </button>
                            @for (int i = 1; i <= Math.Ceiling((double)TotalCount / PageSize); i++)
                            {
                                var pageNum = i;
                                <button class="w-8 h-8 rounded text-sm font-medium @(CurrentPage == pageNum ? "bg-primary-600 text-white" : "hover:bg-neutral-100 text-neutral-600")"
                                        @onclick="() => GoToPage(pageNum)">
                                    @pageNum
                                </button>
                            }
                            <button class="p-1 rounded hover:bg-neutral-100 disabled:opacity-50"
                                    disabled="@(CurrentPage >= Math.Ceiling((double)TotalCount / PageSize))"
                                    @onclick="() => GoToPage(CurrentPage + 1)">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</PageShell>
