@page "/admin/listings"
@using cima.Listings
@using cima.Domain.Shared
@using cima.Blazor.Client.Services
@using cima.Permissions
@using MudBlazor
@using System.Globalization
@attribute [Authorize(cimaPermissions.Listings.Default)]
@inject IListingAppService ListingService
@inject EnumLocalizationService EnumLocalizer
@inject NavigationManager NavManager
@inject ISnackbar Snackbar
@inject IDialogService DialogService
@inherits cimaComponentBase

<PageTitle>@L["Admin:Listings:Title"] - @L["CompanyName"]</PageTitle>

<div class="min-h-screen bg-neutral-50 pt-20">
    @* Header *@
    <div class="bg-white border-b border-neutral-200">
        <div class="cima-container py-6">
            <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
                <div>
                    <h1 class="text-2xl md:text-3xl font-display font-bold text-neutral-900">
                        @L["Admin:Listings:Title"]
                    </h1>
                    <p class="text-neutral-600 mt-1">
                        Gestiona el catálogo de propiedades
                    </p>
                </div>
                <a href="/admin/listings/create" class="cima-btn cima-btn-primary">
                    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                    </svg>
                    @L["Admin:Listings:Create"]
                </a>
            </div>
        </div>
    </div>

    @* Bulk Actions Bar (visible cuando hay selección) *@
    @if (SelectedIds.Any())
    {
        <div class="bg-navy-600 text-white sticky top-20 z-40 shadow-lg">
            <div class="cima-container py-3">
                <div class="flex items-center justify-between">
                    <div class="flex items-center gap-4">
                        <button @onclick="ClearSelection" class="p-1 hover:bg-white/20 rounded transition-colors">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                        </button>
                        <span class="font-medium">@SelectedIds.Count seleccionadas</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <button @onclick="BulkPublish" 
                                class="px-3 py-1.5 bg-green-500 hover:bg-green-600 rounded text-sm font-medium transition-colors flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                            </svg>
                            Publicar
                        </button>
                        <button @onclick="BulkArchive" 
                                class="px-3 py-1.5 bg-yellow-500 hover:bg-yellow-600 rounded text-sm font-medium transition-colors flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                            </svg>
                            Archivar
                        </button>
                        <button @onclick="BulkMoveToPortfolio" 
                                class="px-3 py-1.5 bg-gray-500 hover:bg-gray-600 rounded text-sm font-medium transition-colors flex items-center gap-1">
                             <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"/>
                            </svg>
                            Portafolio
                        </button>
                        <div class="w-px h-6 bg-white/20 mx-1"></div>
                        <button @onclick="BulkDelete" 
                                class="px-3 py-1.5 bg-red-500 hover:bg-red-600 rounded text-sm font-medium transition-colors flex items-center gap-1">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            Eliminar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="cima-container py-8">
        @* Filters *@
        <div class="bg-white rounded-lg shadow-sm border border-neutral-200 p-4 mb-6">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="col-span-1 md:col-span-2">
                    <div class="relative">
                        <input type="text" 
                               @bind="SearchTerm" 
                               @onkeyup="HandleSearchKeyUp"
                               placeholder="Buscar por título, ubicación o código..." 
                               class="w-full pl-10 pr-4 py-2 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-all">
                        <svg class="w-5 h-5 text-neutral-400 absolute left-3 top-2.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                </div>
                <div>
                     <select @bind="StatusFilter" class="w-full px-4 py-2 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-all bg-white">
                        <option value="">Todos los Estados</option>
                        @foreach (ListingStatus status in Enum.GetValues(typeof(ListingStatus)))
                        {
                            <option value="@((int)status)">@EnumLocalizer.GetListingStatusName(status)</option>
                        }
                    </select>
                </div>
                <div>
                    <select @bind="CategoryFilter" class="w-full px-4 py-2 rounded-lg border border-neutral-300 focus:ring-2 focus:ring-primary-500 focus:border-primary-500 outline-none transition-all bg-white">
                        <option value="">Todas las Categorías</option>
                        @foreach (PropertyCategory category in Enum.GetValues(typeof(PropertyCategory)))
                        {
                            <option value="@((int)category)">@EnumLocalizer.GetPropertyCategoryName(category)</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        @* Listings Table *@
        <div class="bg-white rounded-lg shadow-sm border border-neutral-200 overflow-hidden">
            @if (IsLoading)
            {
                <div class="p-12 flex justify-center">
                    <MudProgressCircular Color="Color.Primary" Indeterminate="true" />
                </div>
            }
            else if (!Listings.Any())
            {
                <div class="p-12 text-center text-neutral-500">
                    <svg class="w-12 h-12 mx-auto mb-4 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                    </svg>
                    <p class="text-lg font-medium">No se encontraron propiedades</p>
                    <p class="text-sm">Intenta ajustar los filtros de búsqueda</p>
                </div>
            }
            else
            {
                <div class="w-full">
                    @* Table Header *@
                    <div class="bg-neutral-50 px-6 py-3 border-b border-neutral-200 hidden lg:grid lg:grid-cols-12 gap-4 text-xs font-semibold text-neutral-500 uppercase tracking-wider">
                        <div class="col-span-1 flex items-center">
                            <div class="flex items-center">
                                <input type="checkbox" 
                                       checked="@IsAllSelected" 
                                       @onchange="ToggleSelectAll"
                                       class="rounded border-neutral-300 text-primary-600 focus:ring-primary-500 h-4 w-4" />
                            </div>
                        </div>
                        <div class="col-span-4">Propiedad</div>
                        <div class="col-span-2">Categoría</div>
                        <div class="col-span-2">Precio</div>
                        <div class="col-span-2">Estado</div>
                        <div class="col-span-1 text-right">Acciones</div>
                    </div>

                    @* Table Body *@
                    <div class="divide-y divide-neutral-200">
                        @foreach (var listing in Listings)
                        {
                            <div class="p-4 lg:px-6 lg:py-4 grid grid-cols-1 lg:grid-cols-12 gap-4 items-center hover:bg-neutral-50 transition-colors group">
                                @* Checkbox *@
                                <div class="col-span-1 flex items-center">
                                    <input type="checkbox" 
                                           checked="@SelectedIds.Contains(listing.Id)" 
                                           @onchange="() => ToggleSelection(listing.Id)"
                                           class="rounded border-neutral-300 text-primary-600 focus:ring-primary-500 h-4 w-4" />
                                </div>

                                @* Property Info *@
                                <div class="col-span-1 lg:col-span-4 flex items-center gap-4">
                                    <div class="w-16 h-12 bg-neutral-200 rounded overflow-hidden flex-shrink-0 relative">
                                        @if (listing.CoverImage != null)
                                        {
                                            <img src="@listing.CoverImage.ThumbnailUrl" 
                                                 alt="@listing.Title" 
                                                 class="w-full h-full object-cover" />
                                        }
                                        else
                                        {
                                            <div class="w-full h-full flex items-center justify-center bg-neutral-100 text-neutral-400">
                                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                </svg>
                                            </div>
                                        }
                                    </div>
                                    <div class="overflow-hidden">
                                        <h3 class="font-medium text-neutral-900 truncate" title="@listing.Title">
                                            @listing.Title
                                        </h3>
                                        <p class="text-sm text-neutral-500 truncate">
                                            @listing.Location?.State, @listing.Location?.City
                                        </p>
                                    </div>
                                </div>

                                @* Category *@
                                <div class="col-span-1 lg:col-span-2 flex items-center">
                                    <span class="text-sm text-neutral-700">
                                        @EnumLocalizer.GetPropertyCategoryName(listing.Category)
                                    </span>
                                </div>

                                @* Price *@
                                <div class="col-span-1 lg:col-span-2 flex items-center">
                                    <span class="text-sm font-semibold text-neutral-900">
                                        @listing.Price.ToString("C0", MexicoCulture)
                                    </span>
                                </div>

                                @* Status *@
                                <div class="col-span-1 lg:col-span-2 flex items-center">
                                    <MudChip T="string" Size="Size.Small" Color="@GetStatusColor(listing.Status)">
                                        @EnumLocalizer.GetListingStatusName(listing.Status)
                                    </MudChip>
                                </div>

                                @* Actions *@
                                <div class="col-span-1 lg:col-span-2 flex items-center justify-start lg:justify-end gap-1">
                                    @* Preview *@
                                    <MudIconButton Icon="@Icons.Material.Filled.Visibility" Size="Size.Small" 
                                        Href="@($"/properties/{listing.Id}")" Target="_blank" title="Vista previa" aria-label="Vista previa" />

                                    @* Edit *@
                                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Size="Size.Small" 
                                        Href="@($"/admin/listings/edit/{listing.Id}")" title="Editar" aria-label="Editar" />

                                    @* Duplicate *@
                                    <MudIconButton Icon="@Icons.Material.Filled.ContentCopy" Size="Size.Small" 
                                        Color="Color.Info" OnClick="@(() => DuplicateListing(listing.Id))" title="Duplicar" aria-label="Duplicar" />

                                    @if (listing.Status == ListingStatus.Draft)
                                    {
                                        <MudIconButton Icon="@Icons.Material.Filled.Publish" Size="Size.Small" 
                                            Color="Color.Success" OnClick="@(() => PublishListing(listing.Id))" title="Publicar" aria-label="Publicar" />
                                    }
                                    @if (listing.Status == ListingStatus.Published)
                                    {
                                        <MudIconButton Icon="@Icons.Material.Filled.Archive" Size="Size.Small" 
                                            Color="Color.Warning" OnClick="@(() => ArchiveListing(listing.Id))" title="Archivar" aria-label="Archivar" />
                                    }

                                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Size="Size.Small" 
                                        Color="Color.Error" OnClick="@(() => DeleteListing(listing.Id))" title="Eliminar" aria-label="Eliminar" />
                                </div>
                            </div>
                        }
                    </div>

                    @* Pagination *@
                    <div class="px-6 py-4 border-t border-neutral-200 flex items-center justify-between">
                        <div class="text-sm text-neutral-500">
                             Mostrando @((CurrentPage - 1) * PageSize + 1) - @(Math.Min(CurrentPage * PageSize, TotalCount)) de @TotalCount
                        </div>
                        <div class="flex items-center gap-2">
                            <button class="p-1 rounded hover:bg-neutral-100 disabled:opacity-50"
                                    disabled="@(CurrentPage == 1)"
                                    @onclick="() => GoToPage(CurrentPage - 1)">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                                </svg>
                            </button>
                            @for (int i = 1; i <= Math.Ceiling((double)TotalCount / PageSize); i++)
                            {
                                var pageNum = i;
                                <button class="w-8 h-8 rounded text-sm font-medium @(CurrentPage == pageNum ? "bg-primary-600 text-white" : "hover:bg-neutral-100 text-neutral-600")"
                                        @onclick="() => GoToPage(pageNum)">
                                    @pageNum
                                </button>
                            }
                            <button class="p-1 rounded hover:bg-neutral-100 disabled:opacity-50"
                                    disabled="@(CurrentPage >= Math.Ceiling((double)TotalCount / PageSize))"
                                    @onclick="() => GoToPage(CurrentPage + 1)">
                                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<ListingDto> Listings = new();
    private HashSet<Guid> SelectedIds = new();
    private int TotalCount;
    private int CurrentPage = 1;
    private int PageSize = 10;
    private bool IsLoading = true;
    private string SearchTerm = "";
    private string? StatusFilter;
    private string? CategoryFilter;
    private string? TransactionFilter;
    private System.Timers.Timer? _searchTimer;
    
    private bool IsAllSelected => Listings.Any() && Listings.All(l => SelectedIds.Contains(l.Id));
    
    private static readonly CultureInfo MexicoCulture = new CultureInfo("es-MX");

    protected override async Task OnInitializedAsync()
    {
        _searchTimer = new System.Timers.Timer(500);
        _searchTimer.AutoReset = false;
        _searchTimer.Elapsed += async (sender, e) => 
        {
            CurrentPage = 1;
            await InvokeAsync(LoadListings);
        };

        await LoadListings();
    }

    private void HandleSearchKeyUp()
    {
        _searchTimer?.Stop();
        _searchTimer?.Start();
    }

    private async Task LoadListings()
    {
        try
        {
            IsLoading = true;
            var input = new GetListingsInput
            {
                SkipCount = (CurrentPage - 1) * PageSize,
                MaxResultCount = PageSize,
                Sorting = "CreatedAt DESC",
                SearchTerm = SearchTerm,
                Status = !string.IsNullOrEmpty(StatusFilter) ? int.Parse(StatusFilter) : null,
                PropertyCategory = !string.IsNullOrEmpty(CategoryFilter) ? int.Parse(CategoryFilter) : null,
                TransactionType = !string.IsNullOrEmpty(TransactionFilter) ? int.Parse(TransactionFilter) : null
            };
            var result = await ListingService.GetListAsync(input);
            Listings = result.Items.ToList();
            TotalCount = (int)result.TotalCount;
            
            // Limpiar selección de items que ya no están en la lista
            SelectedIds.RemoveWhere(id => !Listings.Any(l => l.Id == id));
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error al cargar: {ex.Message}", Severity.Error);
        }
        finally
        {
            IsLoading = false;
        }
    }

    // Selection methods
    private void ToggleSelection(Guid id)
    {
        if (SelectedIds.Contains(id))
            SelectedIds.Remove(id);
        else
            SelectedIds.Add(id);
    }

    private void ToggleSelectAll()
    {
        if (Listings == null) return;
        
        if (IsAllSelected)
            SelectedIds.Clear();
        else
            foreach (var listing in Listings)
                SelectedIds.Add(listing.Id);
    }

    private void ClearSelection() => SelectedIds.Clear();

    // Bulk Actions
    private async Task BulkPublish()
    {
        var result = await DialogService.ShowMessageBox(
            "Publicar propiedades",
            $"¿Publicar {SelectedIds.Count} propiedades seleccionadas?",
            yesText: "Publicar", cancelText: "Cancelar");

        if (result == true)
        {
            var success = 0;
            foreach (var id in SelectedIds.ToList())
            {
                try
                {
                    await ListingService.PublishAsync(id);
                    success++;
                }
                catch { /* Ignorar errores individuales */ }
            }
            Snackbar.Add($"{success} propiedades publicadas", Severity.Success);
            ClearSelection();
            await LoadListings();
        }
    }

    private async Task BulkArchive()
    {
        var result = await DialogService.ShowMessageBox(
            "Archivar propiedades",
            $"¿Archivar {SelectedIds.Count} propiedades seleccionadas?",
            yesText: "Archivar", cancelText: "Cancelar");

        if (result == true)
        {
            var success = 0;
            foreach (var id in SelectedIds.ToList())
            {
                try
                {
                    await ListingService.ArchiveAsync(id);
                    success++;
                }
                catch { /* Ignorar errores individuales */ }
            }
            Snackbar.Add($"{success} propiedades archivadas", Severity.Success);
            ClearSelection();
            await LoadListings();
        }
    }

    private async Task BulkMoveToPortfolio()
    {
        var result = await DialogService.ShowMessageBox(
            "Mover a Portafolio",
            $"¿Mover {SelectedIds.Count} propiedades al portafolio?",
            yesText: "Mover", cancelText: "Cancelar");

        if (result == true)
        {
            var success = 0;
            foreach (var id in SelectedIds.ToList())
            {
                try
                {
                    await ListingService.MoveToPortfolioAsync(id);
                    success++;
                }
                catch { /* Ignorar errores individuales */ }
            }
            Snackbar.Add($"{success} propiedades movidas al portafolio", Severity.Success);
            ClearSelection();
            await LoadListings();
        }
    }

    private async Task BulkDelete()
    {
        var result = await DialogService.ShowMessageBox(
            "Eliminar propiedades",
            $"¿Eliminar {SelectedIds.Count} propiedades? Esta acción no se puede deshacer.",
            yesText: "Eliminar", cancelText: "Cancelar");

        if (result == true)
        {
            var success = 0;
            foreach (var id in SelectedIds.ToList())
            {
                try
                {
                    await ListingService.DeleteAsync(id);
                    success++;
                }
                catch { /* Ignorar errores individuales */ }
            }
            Snackbar.Add($"{success} propiedades eliminadas", Severity.Success);
            ClearSelection();
            await LoadListings();
        }
    }

    // Single Actions
    private async Task PublishListing(Guid id)
    {
        try
        {
            await ListingService.PublishAsync(id);
            Snackbar.Add("Propiedad publicada", Severity.Success);
            await LoadListings();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private async Task ArchiveListing(Guid id)
    {
        try
        {
            await ListingService.ArchiveAsync(id);
            Snackbar.Add("Propiedad archivada", Severity.Success);
            await LoadListings();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error: {ex.Message}", Severity.Error);
        }
    }

    private async Task DeleteListing(Guid id)
    {
        var result = await DialogService.ShowMessageBox(
            "Eliminar Propiedad",
            "¿Estás seguro de eliminar esta propiedad? Esta acción no se puede deshacer.",
            yesText: "Eliminar", cancelText: "Cancelar");

        if (result == true)
        {
            try
            {
                await ListingService.DeleteAsync(id);
                Snackbar.Add("Propiedad eliminada", Severity.Success);
                await LoadListings();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task DuplicateListing(Guid id)
    {
        var result = await DialogService.ShowMessageBox(
            "Duplicar Propiedad",
            "¿Estás seguro de duplicar esta propiedad? Se creará una copia idéntica.",
            yesText: "Duplicar", cancelText: "Cancelar");

        if (result == true)
        {
            try
            {
                await ListingService.DuplicateAsync(id);
                Snackbar.Add("Propiedad duplicada exitosamente", Severity.Success);
                await LoadListings();
            }
            catch (Exception ex)
            {
                Snackbar.Add($"Error: {ex.Message}", Severity.Error);
            }
        }
    }

    private async Task GoToPage(int page)
    {
        CurrentPage = page;
        await LoadListings();
    }

    private Color GetStatusColor(ListingStatus status) => status switch
    {
        ListingStatus.Published => Color.Success,
        ListingStatus.Draft => Color.Warning,
        ListingStatus.Archived => Color.Default,
        ListingStatus.Portfolio => Color.Info,
        _ => Color.Default
    };

    protected override void Dispose(bool disposing)
    {
        base.Dispose(disposing);
        _searchTimer?.Dispose();
    }
}
