@page "/examples/listing-card"
@rendermode InteractiveAuto
@attribute [AllowAnonymous]
@using cima.Domain.Shared.Dtos
@using cima.Blazor.Client.Components.Public

<PageTitle>Preview - Tarjeta de Propiedad con Animaciones</PageTitle>

<div class="container mx-auto px-4 py-8">
    <div class="mb-8">
        <h1 class="text-3xl font-bold mb-2">Preview de ListingCard</h1>
        <p class="text-neutral-600">Haz clic en el icono de información (i) para ver la animación de descripción</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        @* Ejemplo 1: Casa Moderna *@
        <div class="h-[400px]">
            <ListingCard Listing="@GetMockListing1()" />
        </div>
        
        @* Ejemplo 2: Departamento *@
        <div class="h-[400px]">
            <ListingCard Listing="@GetMockListing2()" />
        </div>
        
        @* Ejemplo 3: Villa *@
        <div class="h-[400px]">
            <ListingCard Listing="@GetMockListing3()" />
        </div>
    </div>

    <div class="mt-12 p-6 bg-navy-50 rounded-lg">
        <h2 class="text-xl font-semibold mb-4">Características de la Animación</h2>
        <ul class="space-y-2 text-sm text-neutral-700">
            <li class="flex items-start">
                <svg class="w-5 h-5 text-navy-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Efecto <strong>ripple</strong> en el icono de información al hacer clic</span>
            </li>
            <li class="flex items-start">
                <svg class="w-5 h-5 text-navy-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Transición <strong>flip 3D</strong> suave (0.6s) con cubic-bezier</span>
            </li>
            <li class="flex items-start">
                <svg class="w-5 h-5 text-navy-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Animaciones de entrada escalonadas para el contenido de la descripción</span>
            </li>
            <li class="flex items-start">
                <svg class="w-5 h-5 text-navy-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Gradiente de fondo en el reverso de la tarjeta</span>
            </li>
            <li class="flex items-start">
                <svg class="w-5 h-5 text-navy-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Botón "Leer más" para expandir descripciones largas</span>
            </li>
            <li class="flex items-start">
                <svg class="w-5 h-5 text-navy-600 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Hover state mejorado con escala y shadow en el icono</span>
            </li>
        </ul>
    </div>
</div>

