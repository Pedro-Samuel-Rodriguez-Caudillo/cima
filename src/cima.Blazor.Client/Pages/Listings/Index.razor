@page "/listings"
@using cima.Listings
@using cima.Domain.Shared
@using cima.Blazor.Client.Services
@using cima.Permissions
@attribute [Authorize]
@inject IListingAppService ListingService
@inject EnumLocalizationService EnumLocalizer
@inject NavigationManager NavManager

@inherits cimaComponentBase

<PageTitle>Mis Propiedades - @L["CompanyName"]</PageTitle>

<div class="min-h-screen bg-neutral-50 pt-24 pb-12">
    <div class="cima-container">
        <div class="mb-8">
            <h1 class="text-3xl md:text-4xl font-display font-bold text-neutral-900 mb-2">
                Mis Propiedades
            </h1>
            <p class="text-neutral-600">
                Administra tus propiedades listadas
            </p>
        </div>

        @if (IsLoading)
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @for (int i = 0; i < 6; i++)
                {
                    <div class="cima-card overflow-hidden">
                        <div class="cima-skeleton-image h-48"></div>
                        <div class="p-4 space-y-3">
                            <div class="cima-skeleton-text w-3/4"></div>
                            <div class="cima-skeleton-text w-1/2"></div>
                            <div class="cima-skeleton-text w-full"></div>
                        </div>
                    </div>
                }
            </div>
        }
        else if (Listings?.Any() == true)
        {
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var listing in Listings)
                {
                    <div class="cima-card overflow-hidden group">
                        <!-- Image -->
                        <div class="relative h-48 bg-neutral-200 overflow-hidden">
                            @if (listing.Images?.Any() == true)
                            {
                                <img src="@listing.Images.First().Url" 
                                     alt="@listing.Title" 
                                     class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300" />
                            }
                            else
                            {
                                <div class="w-full h-full flex items-center justify-center">
                                    <svg class="w-16 h-16 text-neutral-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                              d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                    </svg>
                                </div>
                            }
                            
                            <!-- Status Badge -->
                            <div class="absolute top-3 right-3">
                                <span class="@GetStatusBadgeClass(listing.Status)">
                                    @EnumLocalizer.GetListingStatusName(listing.Status)
                                </span>
                            </div>
                        </div>

                        <!-- Content -->
                        <div class="p-4">
                            <h3 class="font-semibold text-lg text-neutral-900 mb-1 line-clamp-1">
                                @listing.Title
                            </h3>
                            <p class="text-sm text-neutral-600 mb-3 line-clamp-1">
                                @listing.Location
                            </p>
                            
                            <div class="flex items-center justify-between mb-4">
                                <span class="text-xl font-bold text-navy-600">
                                    @listing.Price.ToString("C0", new System.Globalization.CultureInfo("es-MX"))
                                </span>
                                <span class="text-sm text-neutral-600">
                                    @EnumLocalizer.GetPropertyCategoryName(listing.Category)
                                </span>
                            </div>

                            <!-- Actions -->
                            <div class="flex gap-2">
                                <a href="/properties/@listing.Id" 
                                   class="flex-1 cima-btn cima-btn-sm cima-btn-secondary text-center">
                                    Ver
                                </a>
                                
                                @if (CurrentUser.IsInRole("admin"))
                                {
                                    <a href="/admin/listings/edit/@listing.Id" 
                                       class="flex-1 cima-btn cima-btn-sm cima-btn-primary text-center">
                                        Editar
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="cima-card p-16 text-center">
                <svg class="w-20 h-20 mx-auto text-neutral-400 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                </svg>
                <h3 class="text-xl font-semibold text-neutral-900 mb-2">
                    No tienes propiedades listadas
                </h3>
                <p class="text-neutral-600">
                    Contacta al administrador para agregar nuevas propiedades
                </p>
            </div>
        }
    </div>
</div>

@code {
    private bool IsLoading { get; set; } = true;
    private List<ListingDto>? Listings { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await LoadListings();
    }

    private async Task LoadListings()
    {
        try
        {
            IsLoading = true;

            // Cargar solo las propiedades del arquitecto actual
            var input = new GetListingsInput
            {
                MaxResultCount = 100,
                Sorting = "CreatedAt DESC"
            };

            var result = await ListingService.GetListAsync(input);
            Listings = result.Items.ToList();
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
        }
        finally
        {
            IsLoading = false;
        }
    }

    private string GetStatusBadgeClass(ListingStatus status)
    {
        return status switch
        {
            ListingStatus.Published => "px-3 py-1 text-xs font-medium rounded-full bg-success text-white shadow-md",
            ListingStatus.Draft => "px-3 py-1 text-xs font-medium rounded-full bg-warning text-white shadow-md",
            ListingStatus.Archived => "px-3 py-1 text-xs font-medium rounded-full bg-neutral-500 text-white shadow-md",
            ListingStatus.Portfolio => "px-3 py-1 text-xs font-medium rounded-full bg-navy-500 text-white shadow-md",
            _ => "px-3 py-1 text-xs font-medium rounded-full bg-neutral-400 text-white shadow-md"
        };
    }
}
