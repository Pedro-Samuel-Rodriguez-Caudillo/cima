@page "/architect/dashboard"
@using cima.Architects
@using cima.Listings
@using cima.Listings.Outputs
@using cima.Domain.Shared
@using cima.Blazor.Client.Services
@using MudBlazor
@attribute [Authorize]
@inject IArchitectAppService ArchitectService
@inject IListingAppService ListingService
@inject EnumLocalizationService EnumLocalizer
@inject NavigationManager NavManager
@inject AuthenticationStateProvider AuthStateProvider
@inherits cimaComponentBase

<PageTitle>Mi Panel - @L["CompanyName"]</PageTitle>

<PageShell>
    <div class="cima-container py-8">
        <div class="flex justify-between items-center mb-8">
            <div>
                <h1 class="text-3xl font-display font-bold text-neutral-900">Bienvenido, @(ArchitectName ?? "Arquitecto")</h1>
                <p class="text-neutral-600">Gestiona tus propiedades y perfil</p>
            </div>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" StartIcon="@Icons.Material.Filled.Add" Href="/admin/listings/create">
                Nueva Propiedad
            </MudButton>
        </div>

        @if (IsLoading)
        {
            <MudProgressLinear Color="Color.Primary" Indeterminate="true" />
        }
        else
        {
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
                <MudCard Class="p-6">
                    <div class="text-neutral-600 mb-1">Total Propiedades</div>
                    <div class="text-3xl font-bold text-primary">@Stats.TotalListings</div>
                </MudCard>
                <MudCard Class="p-6">
                    <div class="text-neutral-600 mb-1">Publicadas</div>
                    <div class="text-3xl font-bold text-success">@Stats.PublishedListings</div>
                </MudCard>
                <MudCard Class="p-6">
                    <div class="text-neutral-600 mb-1">En Borrador</div>
                    <div class="text-3xl font-bold text-warning">@Stats.DraftListings</div>
                </MudCard>
            </div>


            <h2 class="text-2xl font-bold mb-4">Propiedades Recientes</h2>
            @if (RecentListings?.Any() == true)
            {
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @foreach (var listing in RecentListings)
                    {
                        <ListingCard Listing="listing" />
                    }
                </div>
                <div class="mt-6 text-center">
                    <MudButton Variant="Variant.Outlined" Color="Color.Primary" Href="/architect/listings">Ver Todas</MudButton>
                </div>
            }
            else
            {
                <p class="text-neutral-600">No tienes propiedades recientes.</p>
            }
        }
    </div>
</PageShell>

@code {
    private bool IsLoading { get; set; } = true;
    private string? ArchitectName { get; set; }
    private ArchitectStatsDto Stats { get; set; } = new();
    private List<ListingSummaryDto> RecentListings { get; set; } = new();
    private Guid? CurrentArchitectId { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            IsLoading = true;
            
            // 1. Obtener el perfil del arquitecto actual
            var currentArchitect = await ArchitectService.GetCurrentAsync();
            
            if (currentArchitect != null)
            {
                CurrentArchitectId = currentArchitect.Id;
                ArchitectName = !string.IsNullOrEmpty(currentArchitect.Name) 
                    ? $"{currentArchitect.Name} {currentArchitect.Surname}".Trim()
                    : currentArchitect.Email;

                
                // 2. Obtener las propiedades del arquitecto
                var listingsResult = await ListingService.GetByArchitectAsync(
                    currentArchitect.Id, 
                    skipCount: 0, 
                    maxResultCount: 100 // Traemos suficientes para calcular stats
                );
                
                // 3. Calcular estadísticas reales
                var allListings = listingsResult.Items.ToList();
                Stats = new ArchitectStatsDto
                {
                    TotalListings = (int)listingsResult.TotalCount,
                    PublishedListings = allListings.Count(l => l.Status == ListingStatus.Published),
                    DraftListings = allListings.Count(l => l.Status == ListingStatus.Draft)
                };
                
                // 4. Obtener solo las 3 más recientes para mostrar
                RecentListings = allListings
                    .OrderByDescending(l => l.CreatedAt)
                    .Take(3)
                    .ToList();
            }
            else
            {
                // Usuario autenticado pero sin perfil de arquitecto
                var authState = await AuthStateProvider.GetAuthenticationStateAsync();
                ArchitectName = authState.User.Identity?.Name ?? "Usuario";
                Stats = new ArchitectStatsDto();
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error al cargar el dashboard: {ex.Message}", Severity.Error);
            Console.WriteLine($"Dashboard error: {ex}");
        }
        finally
        {
            IsLoading = false;
        }
    }

    public class ArchitectStatsDto
    {
        public int TotalListings { get; set; }
        public int PublishedListings { get; set; }
        public int DraftListings { get; set; }
    }
}
