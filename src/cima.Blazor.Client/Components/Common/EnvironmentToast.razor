@using Microsoft.AspNetCore.Components.WebAssembly.Hosting
@using Microsoft.Extensions.Configuration
@inject IWebAssemblyHostEnvironment HostEnvironment
@inject IConfiguration Configuration

@*
    Toast permanente para identificar entorno
    Solo visible en Development y Staging
*@

@if (ShouldShowToast)
{
    <div class="@GetToastClass()" role="status" aria-live="polite">
        <div class="flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="font-medium">@EnvironmentName</span>
        </div>
    </div>
}

@code {
    private bool ShouldShowToast { get; set; }
    private string EnvironmentName { get; set; } = string.Empty;

    protected override void OnInitialized()
    {
        var environment = HostEnvironment.Environment.ToLowerInvariant();
        
        // Verificar si estamos en Railway (staging)
        var railwayEnv = Configuration["RAILWAY_ENVIRONMENT"];
        var isRailway = !string.IsNullOrEmpty(railwayEnv);
        
        if (environment == "development")
        {
            ShouldShowToast = true;
            EnvironmentName = "DEVELOPMENT";
        }
        else if (environment == "staging" || isRailway)
        {
            ShouldShowToast = true;
            EnvironmentName = "STAGING";
        }
        else
        {
            ShouldShowToast = false;
        }
    }

    private string GetToastClass()
    {
        var baseClass = "cima-env-toast";
        
        if (EnvironmentName == "DEVELOPMENT")
        {
            return $"{baseClass} cima-env-toast-develop";
        }
        else if (EnvironmentName == "STAGING")
        {
            return $"{baseClass} cima-env-toast-staging";
        }
        
        return baseClass;
    }
}
