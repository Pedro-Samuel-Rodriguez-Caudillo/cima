                    </svg>
                </button>
            </div>
        }
    </div>
}

@code {
    /// <summary>
    /// Mensaje personalizado para WhatsApp (opcional)
    /// </summary>
    [Parameter]
    public string? CustomMessage { get; set; }

    /// <summary>
    /// Título de la propiedad (para mensajes contextuales)
    /// </summary>
    [Parameter]
    public string? PropertyTitle { get; set; }

    /// <summary>
    /// URL de la propiedad (para incluir en el mensaje)
    /// </summary>
    [Parameter]
    public string? PropertyUrl { get; set; }

    /// <summary>
    /// Texto del botón (opcional)
    /// </summary>
    [Parameter]
    public string? ButtonText { get; set; }

    /// <summary>
    /// Clases CSS para el botón principal
    /// </summary>
    [Parameter]
    public string ButtonClass { get; set; } = "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg font-medium";

    /// <summary>
    /// Clases CSS para el botón de confirmación
    /// </summary>
    [Parameter]
    public string ConfirmButtonClass { get; set; } = "bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg font-medium";

    /// <summary>
    /// Clases CSS para el ícono
    /// </summary>
    [Parameter]
    public string IconClass { get; set; } = "";

    /// <summary>
    /// Variante del botón
    /// </summary>
    [Parameter]
    public WhatsAppButtonVariant Variant { get; set; } = WhatsAppButtonVariant.Default;

    private bool IsEnabled { get; set; }
    private string? WhatsAppUrl { get; set; }
    private bool ShowConfirmation { get; set; }
    private System.Timers.Timer? _resetTimer;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        await LoadWhatsAppSettings();
    }

    private async Task LoadWhatsAppSettings()
    {
        try
        {
            var settings = await SettingsService.GetPublicAsync();
            IsEnabled = settings.WhatsAppEnabled;

            if (IsEnabled && !string.IsNullOrEmpty(settings.WhatsAppUrl))
            {
                // Construir mensaje personalizado
                var message = BuildMessage();
                
                // Reemplazar el mensaje en la URL si hay uno personalizado
                if (!string.IsNullOrEmpty(message))
                {
                    var baseUrl = settings.WhatsAppUrl.Split('?')[0];
                    WhatsAppUrl = $"{baseUrl}?text={Uri.EscapeDataString(message)}";
                }
                else
                {
                    WhatsAppUrl = settings.WhatsAppUrl;
                }
            }
        }
        catch
        {
            IsEnabled = false;
        }
    }

    private string BuildMessage()
    {
        // Si hay mensaje personalizado, usarlo
        if (!string.IsNullOrEmpty(CustomMessage))
        {
            return CustomMessage;
        }

        // Si hay contexto de propiedad, construir mensaje contextual
        if (!string.IsNullOrEmpty(PropertyTitle))
        {
            var message = $"Hola, me interesa la propiedad: {PropertyTitle}";
            
            if (!string.IsNullOrEmpty(PropertyUrl))
            {
                message += $"\n\nEnlace: {PropertyUrl}";
            }
            
            message += "\n\n¿Podrían darme más información?";
            return message;
        }

        // Mensaje genérico (se usará el configurado en settings)
        return "";
    }

    private void ShowConfirm()
    {
        ShowConfirmation = true;
        
        // Auto-reset después de 3 segundos
        _resetTimer?.Dispose();
        _resetTimer = new System.Timers.Timer(3000);
        _resetTimer.Elapsed += (s, e) =>
        {
            _resetTimer?.Dispose();
            InvokeAsync(() =>
            {
                ShowConfirmation = false;
                StateHasChanged();
            });
        };
        _resetTimer.AutoReset = false;
        _resetTimer.Start();
    }

    private void ResetConfirmation()
    {
        _resetTimer?.Dispose();
        ShowConfirmation = false;
    }

    public void Dispose()
    {
        _resetTimer?.Dispose();
    }

    public enum WhatsAppButtonVariant
    {
        Default,
        Outline,
        Icon,
        Floating
    }
}
