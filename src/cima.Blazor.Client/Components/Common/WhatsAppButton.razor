        }
        else
        {
            @* Confirmación con animación *@
            <div class="flex items-center gap-2 animate-fade-in">
                <a href="@WhatsAppUrl" 
                   target="_blank" 
                   rel="noopener noreferrer"
                   class="@ConfirmButtonClass flex items-center gap-2"
                   @onclick="ResetConfirmation">
