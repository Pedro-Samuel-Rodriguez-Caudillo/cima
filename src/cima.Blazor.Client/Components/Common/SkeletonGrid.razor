@* Grid de Skeleton Cards para propiedades *@

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-@Columns gap-6" role="status" aria-busy="true" aria-label="Cargando propiedades...">
    @for (int i = 0; i < Count; i++)
    {
        <SkeletonCard />
    }
</div>

@code {
    [Parameter]
    public int Count { get; set; } = 6;
    
    [Parameter]
    public int Columns { get; set; } = 3;
}
