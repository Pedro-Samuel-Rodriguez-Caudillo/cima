@using Microsoft.AspNetCore.Components.Authorization

<div class="flex items-center justify-center min-h-[50vh] p-4">
    <div class="max-w-md w-full bg-white shadow-lg rounded-lg p-6 border-l-4 border-red-500">
        <div class="flex items-center mb-4">
            <div class="bg-red-100 rounded-full p-2 mr-4">
                <svg class="w-8 h-8 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                </svg>
            </div>
            <h2 class="text-xl font-bold text-gray-800">Something went wrong</h2>
        </div>
        
        <p class="text-gray-600 mb-6">
            We encountered an unexpected error. Please try again later or contact support if the problem persists.
        </p>

        <AuthorizeView Roles="admin">
            <Authorized>
                <details class="mb-4 bg-gray-50 p-3 rounded text-sm overflow-hidden">
                    <summary class="cursor-pointer font-medium text-gray-700 mb-1">Technical Details (Admin Only)</summary>
                    <pre class="whitespace-pre-wrap text-xs text-red-800 overflow-auto max-h-60">@Exception?.ToString()</pre>
                </details>
            </Authorized>
        </AuthorizeView>

        @if (OnRecover.HasDelegate)
        {
            <div class="flex justify-end">
                <button class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors" @onclick="OnRecover">
                    Reload Page
                </button>
            </div>
        }
    </div>
</div>

@code {
    [Parameter] public Exception? Exception { get; set; }
    [Parameter] public EventCallback OnRecover { get; set; }
}
