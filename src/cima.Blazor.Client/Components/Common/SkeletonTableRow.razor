@* Skeleton Loader para filas de tabla *@

<div class="animate-pulse" role="status" aria-label="Cargando fila...">
    <div class="grid grid-cols-12 gap-4 p-4 border-b border-gray-100">
        @* Checkbox *@
        <div class="col-span-1 flex items-center">
            <div class="w-4 h-4 bg-gray-200 rounded"></div>
        </div>
        
        @* Image + Title *@
        <div class="col-span-3 flex items-center gap-3">
            <div class="w-16 h-16 bg-gray-200 rounded flex-shrink-0"></div>
            <div class="flex-1 space-y-2">
                <div class="h-4 bg-gray-200 rounded w-3/4"></div>
                <div class="h-3 bg-gray-200 rounded w-1/2"></div>
            </div>
        </div>
        
        @* Category *@
        <div class="col-span-2 flex items-center">
            <div class="h-4 bg-gray-200 rounded w-20"></div>
        </div>
        
        @* Price *@
        <div class="col-span-2 flex items-center">
            <div class="h-4 bg-gray-200 rounded w-24"></div>
        </div>
        
        @* Status *@
        <div class="col-span-2 flex items-center">
            <div class="h-6 bg-gray-200 rounded-full w-20"></div>
        </div>
        
        @* Actions *@
        <div class="col-span-2 flex items-center justify-end gap-2">
            <div class="w-8 h-8 bg-gray-200 rounded"></div>
            <div class="w-8 h-8 bg-gray-200 rounded"></div>
            <div class="w-8 h-8 bg-gray-200 rounded"></div>
        </div>
    </div>
    
    <span class="sr-only">Cargando...</span>
</div>

@code {
    [Parameter]
    public int Count { get; set; } = 5;
}
