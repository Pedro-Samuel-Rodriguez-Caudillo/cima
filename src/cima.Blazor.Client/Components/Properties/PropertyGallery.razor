@using cima.Domain.Shared.Dtos

<div class="relative">
    @if (Images == null || !Images.Any())
    {
        <div class="aspect-[16/9] bg-gray-200 dark:bg-gray-700 flex items-center justify-center">
            <span class="text-gray-400 dark:text-gray-500 uppercase tracking-wider text-sm">Sin Imágenes</span>
        </div>
    }
    else
    {
        <!-- Main Image -->
        <div class="aspect-[16/9] bg-gray-900 dark:bg-black overflow-hidden cursor-pointer group" 
             @onclick="@(() => OpenLightbox(currentIndex))">
            <img src="@Images[currentIndex].Url" 
                 alt="@Images[currentIndex].AltText"
                 class="w-full h-full object-cover group-hover:opacity-90 transition-opacity duration-300" />
        </div>
        
        <!-- Thumbnails -->
        @if (Images.Count > 1)
        {
            <div class="grid grid-cols-4 gap-2 mt-4">
                @for (int i = 0; i < Math.Min(4, Images.Count); i++)
                {
                    var index = i;
                    <div class="aspect-[4/3] bg-gray-200 dark:bg-gray-700 overflow-hidden cursor-pointer @(currentIndex == index ? "ring-2 ring-cima-accent dark:ring-white" : "")"
                         @onclick="@(() => currentIndex = index)">
                        <img src="@Images[index].Url" 
                             alt="@Images[index].AltText"
                             class="w-full h-full object-cover hover:opacity-75 transition-opacity" />
                    </div>
                }
            </div>
        }
        
        <!-- Navigation Arrows -->
        @if (Images.Count > 1)
        {
            <button @onclick="PreviousImage" 
                    @onclick:stopPropagation="true"
                    class="absolute left-4 top-1/2 -translate-y-1/2 bg-white dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 p-3 transition-colors">
                <svg class="w-6 h-6 text-gray-900 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
            <button @onclick="NextImage" 
                    @onclick:stopPropagation="true"
                    class="absolute right-4 top-1/2 -translate-y-1/2 bg-white dark:bg-gray-800 hover:bg-gray-100 dark:hover:bg-gray-700 p-3 transition-colors">
                <svg class="w-6 h-6 text-gray-900 dark:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>
        }
    }
</div>

<!-- Lightbox Modal -->
@if (showLightbox)
{
    <div class="fixed inset-0 bg-black bg-opacity-95 z-50 flex items-center justify-center" 
         @onclick="CloseLightbox">
        <div class="relative max-w-7xl w-full mx-4" @onclick:stopPropagation="true">
            <img src="@Images[currentIndex].Url" 
                 alt="@Images[currentIndex].AltText"
                 class="w-full h-auto max-h-[90vh] object-contain" />
            
            <button @onclick="CloseLightbox" 
                    class="absolute top-4 right-4 text-white hover:text-gray-300 transition-colors">
                <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
            
            @if (Images.Count > 1)
            {
                <button @onclick="PreviousImage" 
                        @onclick:stopPropagation="true"
                        class="absolute left-4 top-1/2 -translate-y-1/2 bg-white/20 hover:bg-white/30 p-4 text-white transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                    </svg>
                </button>
                <button @onclick="NextImage" 
                        @onclick:stopPropagation="true"
                        class="absolute right-4 top-1/2 -translate-y-1/2 bg-white/20 hover:bg-white/30 p-4 text-white transition-colors">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </button>
            }
            
            <div class="absolute bottom-4 left-1/2 -translate-x-1/2 text-white text-sm">
                @(currentIndex + 1) / @Images.Count
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public List<ListingImageDto> Images { get; set; } = new();
    
    private int currentIndex = 0;
    private bool showLightbox = false;
    
    private void NextImage()
    {
        currentIndex = (currentIndex + 1) % Images.Count;
    }
    
    private void PreviousImage()
    {
        currentIndex = currentIndex == 0 ? Images.Count - 1 : currentIndex - 1;
    }
    
    private void OpenLightbox(int index)
    {
        currentIndex = index;
        showLightbox = true;
    }
    
    private void CloseLightbox()
    {
        showLightbox = false;
    }
}
