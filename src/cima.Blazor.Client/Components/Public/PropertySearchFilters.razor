@using cima.Domain.Shared.Dtos
@using cima.Domain.Shared
@using cima.Blazor.Client.Services
@inject EnumLocalizationService EnumLocalizer
@inherits cimaComponentBase

@*
    Componente de filtros de búsqueda de propiedades
    Incluye búsqueda rápida y filtros avanzados colapsables
*@

<div class="cima-card p-6">
    <EditForm Model="@SearchModel" OnValidSubmit="HandleSubmit">
        @* Búsqueda Rápida *@
        <div class="flex flex-col md:flex-row gap-4 mb-4">
            <div class="flex-1">
                <label for="search-term" class="sr-only">@L["Search:QuickSearch"]</label>
                <div class="relative">
                    <input 
                        id="search-term"
                        type="search"
                        class="cima-input pl-10"
                        placeholder="@L["Hero:SearchPlaceholder"]"
                        @bind="SearchModel.Location"
                        @bind:event="oninput" />
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-5 h-5 text-neutral-400" 
                         fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </div>
            </div>
            
            <button 
                type="button"
                @onclick="ToggleAdvancedFilters"
                class="cima-btn cima-btn-outline md:w-auto whitespace-nowrap">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                </svg>
                @(ShowAdvanced ? L["Search:HideAdvanced"] : L["Search:ShowAdvanced"])
            </button>
            
            <button 
                type="submit"
                class="cima-btn cima-btn-primary md:w-auto">
                @L["Search:SearchButton"]
            </button>
        </div>

        @* Filtros Avanzados (Colapsables) *@
        @if (ShowAdvanced)
        {
            <div class="pt-4 border-t border-neutral-200 animate-slide-down">
                <h3 class="text-sm font-semibold text-neutral-900 mb-4">
                    @L["Search:AdvancedFilters"]
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                    @* Tipo de Transacción *@
                    <div class="cima-form-group">
                        <label for="transaction-type" class="cima-label">
                            @L["Search:TransactionType"]
                        </label>
                        <select 
                            id="transaction-type"
                            class="cima-input"
                            @bind="SearchModel.TransactionType">
                            <option value="">@L["Common:All"]</option>
                            <option value="@cima.Domain.Shared.TransactionType.Sale">@EnumLocalizer.GetTransactionTypeName(cima.Domain.Shared.TransactionType.Sale)</option>
                            <option value="@cima.Domain.Shared.TransactionType.Rent">@EnumLocalizer.GetTransactionTypeName(cima.Domain.Shared.TransactionType.Rent)</option>
                            <option value="@cima.Domain.Shared.TransactionType.Lease">@EnumLocalizer.GetTransactionTypeName(cima.Domain.Shared.TransactionType.Lease)</option>
                        </select>
                    </div>

                    @* Categoría *@
                    <div class="cima-form-group">
                        <label for="category" class="cima-label">
                            @L["Search:PropertyCategory"]
                        </label>
                        <select 
                            id="category"
                            class="cima-input"
                            @bind="SearchModel.Category">
                            <option value="">@L["Common:All"]</option>
                            <option value="@cima.Domain.Shared.PropertyCategory.Residential">@EnumLocalizer.GetPropertyCategoryName(cima.Domain.Shared.PropertyCategory.Residential)</option>
                            <option value="@cima.Domain.Shared.PropertyCategory.Commercial">@EnumLocalizer.GetPropertyCategoryName(cima.Domain.Shared.PropertyCategory.Commercial)</option>
                            <option value="@cima.Domain.Shared.PropertyCategory.Mixed">@EnumLocalizer.GetPropertyCategoryName(cima.Domain.Shared.PropertyCategory.Mixed)</option>
                            <option value="@cima.Domain.Shared.PropertyCategory.Land">@EnumLocalizer.GetPropertyCategoryName(cima.Domain.Shared.PropertyCategory.Land)</option>
                        </select>
                    </div>

                    @* Tipo de Propiedad *@
                    <div class="cima-form-group">
                        <label for="property-type" class="cima-label">
                            @L["Search:PropertyType"]
                        </label>
                        <select 
                            id="property-type"
                            class="cima-input"
                            @bind="SearchModel.Type">
                            <option value="">@L["Common:All"]</option>
                            @* Residenciales *@
                            <option value="@cima.Domain.Shared.PropertyType.House">@EnumLocalizer.GetPropertyTypeName(cima.Domain.Shared.PropertyType.House)</option>
                            <option value="@cima.Domain.Shared.PropertyType.Apartment">@EnumLocalizer.GetPropertyTypeName(cima.Domain.Shared.PropertyType.Apartment)</option>
                            <option value="@cima.Domain.Shared.PropertyType.Condo">@EnumLocalizer.GetPropertyTypeName(cima.Domain.Shared.PropertyType.Condo)</option>
                            <option value="@cima.Domain.Shared.PropertyType.Townhouse">@EnumLocalizer.GetPropertyTypeName(cima.Domain.Shared.PropertyType.Townhouse)</option>
                            <option value="@cima.Domain.Shared.PropertyType.Villa">@EnumLocalizer.GetPropertyTypeName(cima.Domain.Shared.PropertyType.Villa)</option>
                            @* Comerciales *@
                            <option value="@cima.Domain.Shared.PropertyType.Office">@EnumLocalizer.GetPropertyTypeName(cima.Domain.Shared.PropertyType.Office)</option>
                            <option value="@cima.Domain.Shared.PropertyType.Warehouse">@EnumLocalizer.GetPropertyTypeName(cima.Domain.Shared.PropertyType.Warehouse)</option>
                            <option value="@cima.Domain.Shared.PropertyType.RetailSpace">@EnumLocalizer.GetPropertyTypeName(cima.Domain.Shared.PropertyType.RetailSpace)</option>
                        </select>
                    </div>

                    @* Precio Mínimo *@
                    <div class="cima-form-group">
                        <label for="min-price" class="cima-label">
                            @L["Search:MinPrice"]
                        </label>
                        <input 
                            id="min-price"
                            type="number"
                            class="cima-input"
                            placeholder="$0"
                            @bind="SearchModel.MinPrice" />
                    </div>

                    @* Precio Máximo *@
                    <div class="cima-form-group">
                        <label for="max-price" class="cima-label">
                            @L["Search:MaxPrice"]
                        </label>
                        <input 
                            id="max-price"
                            type="number"
                            class="cima-input"
                            placeholder="$999,999,999"
                            @bind="SearchModel.MaxPrice" />
                    </div>

                    @* Recámaras Mínimas *@
                    <div class="cima-form-group">
                        <label for="min-bedrooms" class="cima-label">
                            @L["Search:Bedrooms"]
                        </label>
                        <select 
                            id="min-bedrooms"
                            class="cima-input"
                            @bind="SearchModel.MinBedrooms">
                            <option value="">@L["Common:All"]</option>
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="@i">@i+</option>
                            }
                        </select>
                    </div>

                    @* Baños Mínimos *@
                    <div class="cima-form-group">
                        <label for="min-bathrooms" class="cima-label">
                            @L["Search:Bathrooms"]
                        </label>
                        <select 
                            id="min-bathrooms"
                            class="cima-input"
                            @bind="SearchModel.MinBathrooms">
                            <option value="">@L["Common:All"]</option>
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="@i">@i+</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="flex gap-3 mt-6 pt-4 border-t border-neutral-200">
                    <button 
                        type="button"
                        @onclick="HandleClear"
                        class="cima-btn cima-btn-secondary flex-1 md:flex-initial">
                        @L["Search:ClearFilters"]
                    </button>
                    
                    <button 
                        type="submit"
                        class="cima-btn cima-btn-primary flex-1 md:flex-initial">
                        @L["Search:SearchButton"]
                    </button>
                </div>
            </div>
        }
    </EditForm>
</div>

@code {
    [Parameter]
    public EventCallback<PropertySearchDto> OnSearch { get; set; }

    [Parameter]
    public EventCallback OnClear { get; set; }

    private PropertySearchDto SearchModel { get; set; } = new();
    private bool ShowAdvanced { get; set; }

    private void ToggleAdvancedFilters()
    {
        ShowAdvanced = !ShowAdvanced;
    }

    private async Task HandleSubmit()
    {
        if (OnSearch.HasDelegate)
        {
            await OnSearch.InvokeAsync(SearchModel);
        }
    }

    private async Task HandleClear()
    {
        SearchModel = new();
        ShowAdvanced = false;
        
        if (OnClear.HasDelegate)
        {
            await OnClear.InvokeAsync();
        }
    }
}
