@using cima.Listings
@using cima.Categories
@using cima.Domain.Shared
@inject ICategoryAppService CategoryService
@inherits cimaComponentBase

@*
    Filtros de b�squeda de propiedades
    Solo para ventas - sin opciones de renta/arrendamiento
*@

<div class="bg-white rounded-2xl shadow-lg p-6">
    <EditForm Model="@SearchModel" OnValidSubmit="HandleSubmit">
        @* B�squeda R�pida *@
        <div class="flex flex-col md:flex-row gap-4 mb-4">
            <div class="flex-1">
                <label for="search-term" class="sr-only">@L["Search:QuickSearch"]</label>
                <div class="relative">
                    <input 
                        id="search-term"
                        type="search"
                        class="w-full pl-12 pr-4 py-3 border border-neutral-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-navy-500 focus:border-transparent transition-all"
                        placeholder="@L["Hero:SearchPlaceholder"]"
                        @bind="SearchModel.Location"
                        @bind:event="oninput" />
                    <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-neutral-400" 
                         fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </div>
            </div>
            
            <button 
                type="button"
                @onclick="ToggleAdvancedFilters"
                class="px-6 py-3 border-2 border-navy-600 text-navy-600 hover:bg-navy-50 rounded-xl font-medium transition-all duration-200 flex items-center gap-2 whitespace-nowrap">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
                </svg>
                <span>@(ShowAdvanced ? L["Search:HideAdvanced"] : L["Search:ShowAdvanced"])</span>
            </button>
            
            <button 
                type="submit"
                class="px-8 py-3 bg-navy-600 hover:bg-navy-700 text-white rounded-xl font-medium transition-all duration-200 shadow-lg">
                @L["Search:SearchButton"]
            </button>
        </div>

        @* Filtros Avanzados *@
        @if (ShowAdvanced)
        {
            <div class="pt-6 border-t border-neutral-200 animate-slide-down">
                <h3 class="text-lg font-display font-bold text-navy-900 mb-6">
                    @L["Search:AdvancedFilters"]
                </h3>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    @* Categoría *@
                    <div>
                        <label for="category" class="block text-sm font-medium text-neutral-700 mb-2">
                            @L["Search:PropertyCategory"]
                        </label>
                        <select
                            id="category"
                            class="w-full px-4 py-3 border border-neutral-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-navy-500 focus:border-transparent transition-all"
                            @bind="SearchModel.CategoryId"
                            @bind:after="HandleCategoryChanged">
                            <option value="">@L["Common:All"]</option>
                            @foreach (var category in Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                    </div>

                    @* Tipo de Propiedad *@
                    <div>
                        <label for="property-type" class="block text-sm font-medium text-neutral-700 mb-2">
                            @L["Search:PropertyType"]
                        </label>
                        <select
                            id="property-type"
                            class="w-full px-4 py-3 border border-neutral-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-navy-500 focus:border-transparent transition-all"
                            @bind="SearchModel.TypeId">
                            <option value="">@L["Common:All"]</option>
                            @foreach (var type in Types)
                            {
                                <option value="@type.Id">@type.Name</option>
                            }
                        </select>
                    </div>

                    @* Precio M�nimo *@
                    <div>
                        <label for="min-price" class="block text-sm font-medium text-neutral-700 mb-2">
                            @L["Search:MinPrice"]
                        </label>
                        <input 
                            id="min-price"
                            type="number"
                            class="w-full px-4 py-3 border border-neutral-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-navy-500 focus:border-transparent transition-all"
                            placeholder="$0"
                            @bind="SearchModel.MinPrice" />
                    </div>

                    @* Precio M�ximo *@
                    <div>
                        <label for="max-price" class="block text-sm font-medium text-neutral-700 mb-2">
                            @L["Search:MaxPrice"]
                        </label>
                        <input 
                            id="max-price"
                            type="number"
                            class="w-full px-4 py-3 border border-neutral-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-navy-500 focus:border-transparent transition-all"
                            placeholder="$999,999,999"
                            @bind="SearchModel.MaxPrice" />
                    </div>

                    @* Rec�maras M�nimas *@
                    <div>
                        <label for="min-bedrooms" class="block text-sm font-medium text-neutral-700 mb-2">
                            @L["Search:Bedrooms"]
                        </label>
                        <select 
                            id="min-bedrooms"
                            class="w-full px-4 py-3 border border-neutral-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-navy-500 focus:border-transparent transition-all"
                            @bind="SearchModel.MinBedrooms">
                            <option value="">@L["Common:All"]</option>
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="@i">@i+</option>
                            }
                        </select>
                    </div>

                    @* Ba�os M�nimos *@
                    <div>
                        <label for="min-bathrooms" class="block text-sm font-medium text-neutral-700 mb-2">
                            @L["Search:Bathrooms"]
                        </label>
                        <select 
                            id="min-bathrooms"
                            class="w-full px-4 py-3 border border-neutral-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-navy-500 focus:border-transparent transition-all"
                            @bind="SearchModel.MinBathrooms">
                            <option value="">@L["Common:All"]</option>
                            @for (int i = 1; i <= 10; i++)
                            {
                                <option value="@i">@i+</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="flex flex-col sm:flex-row gap-4 mt-8 pt-6 border-t border-neutral-200">
                    <button 
                        type="button"
                        @onclick="HandleClear"
                        class="flex-1 sm:flex-initial px-6 py-3 border-2 border-neutral-300 text-neutral-700 hover:bg-neutral-50 rounded-xl font-medium transition-all duration-200">
                        @L["Search:ClearFilters"]
                    </button>
                    
                    <button 
                        type="submit"
                        class="flex-1 sm:flex-initial px-8 py-3 bg-navy-600 hover:bg-navy-700 text-white rounded-xl font-medium transition-all duration-200 shadow-lg">
                        @L["Search:SearchButton"]
                    </button>
                </div>
            </div>
        }
    </EditForm>
</div>

@code {
    [Parameter]
    public EventCallback<PropertySearchDto> OnSearch { get; set; }

    [Parameter]
    public EventCallback OnClear { get; set; }

    private PropertySearchDto SearchModel { get; set; } = new();
    private bool ShowAdvanced { get; set; }
    private List<PropertyCategoryDto> Categories { get; set; } = new();
    private List<PropertyTypeDto> Types { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadCategoriesAsync();
    }

    private async Task LoadCategoriesAsync()
    {
        try
        {
            var categories = await CategoryService.GetCategoriesAsync();
            Categories = categories
                .Where(category => category.IsActive)
                .OrderBy(category => category.SortOrder)
                .ToList();

            await LoadTypesAsync(SearchModel.CategoryId);
        }
        catch
        {
            Categories = new List<PropertyCategoryDto>();
            Types = new List<PropertyTypeDto>();
        }
    }

    private async Task LoadTypesAsync(Guid? categoryId)
    {
        try
        {
            var types = await CategoryService.GetTypesAsync(categoryId, includeInactive: false);
            Types = types
                .Where(type => type.IsActive)
                .OrderBy(type => type.SortOrder)
                .ToList();

            if (SearchModel.TypeId.HasValue && !Types.Any(t => t.Id == SearchModel.TypeId.Value))
            {
                SearchModel.TypeId = null;
            }
        }
        catch
        {
            Types = new List<PropertyTypeDto>();
        }
    }

    private async Task HandleCategoryChanged()
    {
        await LoadTypesAsync(SearchModel.CategoryId);
    }

    private void ToggleAdvancedFilters()
    {
        ShowAdvanced = !ShowAdvanced;
    }

    private async Task HandleSubmit()
    {
        // Solo ventas - forzar TransactionType.Sale
        SearchModel.TransactionType = TransactionType.Sale;
        
        if (OnSearch.HasDelegate)
        {
            await OnSearch.InvokeAsync(SearchModel);
        }
    }

    private async Task HandleClear()
    {
        SearchModel = new();
        ShowAdvanced = false;
        await LoadTypesAsync(null);

        if (OnClear.HasDelegate)
        {
            await OnClear.InvokeAsync();
        }
    }
}

