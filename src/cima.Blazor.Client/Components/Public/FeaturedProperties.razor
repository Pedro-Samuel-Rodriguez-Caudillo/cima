@using cima.Listings
@inject IFeaturedListingAppService FeaturedListingService
@inherits cimaComponentBase

<section id="featured" class="bg-neutral-50 py-20 md:py-28">
    <div class="cima-container">
        <!-- Header -->
        <div class="text-center mb-16">
            <h2 class="text-4xl md:text-5xl font-display font-bold text-navy-900 mb-4 tracking-tight">
                @L["Properties:Featured"]
            </h2>
            <p class="text-lg md:text-xl text-neutral-600 font-light max-w-2xl mx-auto">
                @L["Featured:Subtitle"]
            </p>
        </div>

        @if (IsLoading)
        {
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 xl:gap-8">
                @for (int i = 0; i < 4; i++)
                {
                    <div class="bg-white rounded-2xl shadow-md overflow-hidden">
                        <div class="aspect-[4/3] bg-neutral-200 animate-pulse"></div>
                        <div class="p-5 space-y-4">
                            <div class="cima-skeleton-text w-3/4 h-5"></div>
                            <div class="cima-skeleton-text w-1/2 h-4"></div>
                            <div class="flex gap-3">
                                <div class="cima-skeleton-text w-16 h-4"></div>
                                <div class="cima-skeleton-text w-16 h-4"></div>
                            </div>
                            <div class="cima-skeleton-text w-1/3 h-6"></div>
                        </div>
                    </div>
                }
            </div>
        }
        else if (FeaturedListings?.Any() == true)
        {
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 xl:gap-8 mb-12">
                @foreach (var listing in FeaturedListings)
                {
                    <ListingCard Listing="listing" />
                }
            </div>

            <div class="text-center">
                <a href="/propiedades" class="cima-btn cima-btn-primary inline-flex items-center gap-2">
                    <span>@L["Properties:ViewAll"]</span>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                </a>
            </div>
        }
        else
        {
            <div class="text-center py-16">
                <svg class="w-20 h-20 mx-auto text-neutral-400 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                          d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                </svg>
                <h3 class="text-xl font-semibold text-neutral-900 mb-2">
                    @L["Featured:NoProperties"]
                </h3>
                <p class="text-neutral-600">
                    @L["Featured:ComingSoon"]
                </p>
            </div>
        }
    </div>
</section>

@code {
    private bool IsLoading { get; set; } = true;
    private List<ListingDto>? FeaturedListings { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await LoadFeaturedListings();
    }

    private async Task LoadFeaturedListings()
    {
        try
        {
            IsLoading = true;
            
            var listings = await FeaturedListingService.GetForHomepageAsync(8);
            
            FeaturedListings = listings;
        }
        catch (Exception ex)
        {
            await HandleErrorAsync(ex);
            FeaturedListings = new List<ListingDto>();
        }
        finally
        {
            IsLoading = false;
        }
    }
}
