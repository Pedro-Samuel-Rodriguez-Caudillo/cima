@inject IJSRuntime JS

<div class="image-gallery">
    @* Imagen principal con altura responsive *@
    <div class="relative mb-4">
        <img src="@CurrentImage" 
             alt="Imagen de la propiedad" 
             class="w-full h-64 sm:h-80 lg:h-96 object-cover rounded-lg shadow-lg cursor-pointer aspect-video"
             loading="eager"
             @onclick="OpenFullscreen" />
        
        @if (Images.Count > 1)
        {
            @* Botones de navegación *@
            <button @onclick="PreviousImage" 
                    class="absolute left-2 sm:left-4 top-1/2 -translate-y-1/2 bg-white/80 hover:bg-white p-2 sm:p-3 rounded-full shadow-lg transition">
                <svg class="w-5 h-5 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                </svg>
            </button>
            <button @onclick="NextImage" 
                    class="absolute right-2 sm:right-4 top-1/2 -translate-y-1/2 bg-white/80 hover:bg-white p-2 sm:p-3 rounded-full shadow-lg transition">
                <svg class="w-5 h-5 text-gray-800" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
            </button>
            
            @* Contador *@
            <div class="absolute bottom-2 sm:bottom-4 left-1/2 -translate-x-1/2 bg-black/60 text-white px-3 sm:px-4 py-1 sm:py-2 rounded-full text-xs sm:text-sm">
                @(currentIndex + 1) / @Images.Count
            </div>
        }
    </div>
    
    @* Miniaturas responsive con lazy loading *@
    @if (Images.Count > 1)
    {
        <div class="grid grid-cols-2 sm:grid-cols-4 md:grid-cols-6 gap-2">
            @for (int i = 0; i < Images.Count; i++)
            {
                var index = i;
                var isActive = index == currentIndex;
                <div class="relative cursor-pointer @(isActive ? "ring-2 ring-navy-600" : "")" 
                     @onclick="() => SetCurrentImage(index)">
                    <img src="@Images[index]" 
                         alt="Miniatura @(index + 1)" 
                         class="w-full h-16 sm:h-20 object-cover rounded-lg aspect-video @(isActive ? "" : "opacity-60 hover:opacity-100") transition"
                         loading="lazy" />
                </div>
            }
        </div>
    }
</div>

@* Modal de pantalla completa *@
@if (showFullscreen)
{
    <div class="fixed inset-0 z-50 bg-black/95 flex items-center justify-center p-4" @onclick="CloseFullscreen">
        <button @onclick="CloseFullscreen" 
                class="absolute top-4 right-4 text-white hover:text-gray-300 z-10 p-2">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
        </button>
        
        <div class="relative max-w-7xl w-full" @onclick:stopPropagation>
            <img src="@CurrentImage" 
                 alt="Imagen ampliada" 
                 class="w-full max-h-screen object-contain" />
            
            @if (Images.Count > 1)
            {
                <button @onclick="PreviousImage" 
                        @onclick:stopPropagation
                        class="absolute left-2 sm:left-4 top-1/2 -translate-y-1/2 bg-white/20 hover:bg-white/30 p-3 sm:p-4 rounded-full transition">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
                    </svg>
                </button>
                <button @onclick="NextImage" 
                        @onclick:stopPropagation
                        class="absolute right-2 sm:right-4 top-1/2 -translate-y-1/2 bg-white/20 hover:bg-white/30 p-3 sm:p-4 rounded-full transition">
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                </button>
            }
        </div>
    </div>
}

@code {
    [Parameter] public List<string> Images { get; set; } = new();
    
    private int currentIndex = 0;
    private bool showFullscreen = false;
    
    private string CurrentImage => Images.Count > 0 ? Images[currentIndex] : "/images/placeholder.jpg";
    
    private void NextImage()
    {
        if (Images.Count > 0)
        {
            currentIndex = (currentIndex + 1) % Images.Count;
        }
    }
    
    private void PreviousImage()
    {
        if (Images.Count > 0)
        {
            currentIndex = currentIndex == 0 ? Images.Count - 1 : currentIndex - 1;
        }
    }
    
    private void SetCurrentImage(int index)
    {
        currentIndex = index;
    }
    
    private void OpenFullscreen()
    {
        showFullscreen = true;
    }
    
    private void CloseFullscreen()
    {
        showFullscreen = false;
    }
    
    protected override void OnInitialized()
    {
        // Si no hay imágenes, agregar una de placeholder
        if (Images.Count == 0)
        {
            Images.Add("/images/placeholder.jpg");
        }
    }
}
